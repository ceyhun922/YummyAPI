@using YummyUI.DTOs.ServiceDTOs
@model CreateServiceDto
@{
    Layout = "_AdminLayout";
}

<style>
  /* ===== Page Shell ===== */
  .svc-page, .svc-page * { box-sizing:border-box; }
  .svc-page{
    min-height: 100%;
    padding: 1.6rem 2rem;
    position:relative;
  }

  .svc-card{
    max-width: 980px;
    margin: 0 auto;
    background: #ffffff;
    border-radius: 18px;
    box-shadow: 0 18px 40px rgba(0,0,0,.08);
    overflow:hidden;
    border: 1px solid rgba(0,0,0,.06);
  }

  .svc-head{
    padding: 1.25rem 1.35rem;
    border-bottom: 1px solid rgba(0,0,0,.06);
  }
  .svc-head h3{
    margin:0;
    font-weight: 900;
    letter-spacing:.2px;
    color:#111827;
  }
  .svc-head p{
    margin:.35rem 0 0 0;
    color:#6b7280;
    font-weight:600;
  }

  .svc-body{
    padding: 1.35rem;
  }

  .svc-grid{
    display:grid;
    grid-template-columns: 1.4fr .6fr;
    gap: 1.2rem;
    align-items:start;
  }

  /* ===== Fields ===== */
  .svc-group{ margin-bottom: 1.05rem; }
  .svc-label{
    display:block;
    margin-bottom: .45rem;
    font-weight: 900;
    color:#111827;
  }

  .svc-input, .svc-textarea{
    width:100%;
    padding: .95rem 1rem;
    border-radius: 12px;
    border: 1px solid rgba(17,24,39,.12);
    outline: none;
    transition: box-shadow .15s ease, border-color .15s ease;
    background:#fff;
    font-weight: 600;
    color:#111827;
  }
  .svc-input::placeholder, .svc-textarea::placeholder{ color:#9ca3af; font-weight:600; }
  .svc-input:focus, .svc-textarea:focus{
    border-color: rgba(102,126,234,.55);
    box-shadow: 0 0 0 4px rgba(102,126,234,.15);
  }
  .svc-textarea{
    min-height: 120px;
    resize: vertical;
  }

  /* ===== Icon Row ===== */
  .icon-row{
    display:flex;
    gap: .9rem;
    align-items:center;
  }
  .icon-preview{
    width: 60px;
    height: 60px;
    border-radius: 16px;
    display:grid;
    place-items:center;
    border: 1px dashed rgba(17,24,39,.18);
    background: rgba(17,24,39,.03);
    flex: 0 0 auto;
  }
  .icon-preview i{
    font-size: 28px;
    color:#111827;
  }

  .btn-pick{
    border: none;
    padding: .95rem 1.05rem;
    border-radius: 14px;
    font-weight: 900;
    cursor:pointer;
    background: linear-gradient(135deg,#fbbf24,#f59e0b);
    color:#1a1a1a;
    box-shadow: 0 12px 28px rgba(245,158,11,.25);
    transition: transform .15s ease, box-shadow .15s ease, opacity .15s ease;
    white-space: nowrap;
  }
  .btn-pick:hover{ transform: translateY(-2px); box-shadow: 0 18px 36px rgba(245,158,11,.30); }
  .btn-pick:active{ transform: translateY(0); opacity:.95; }

  .hint{
    margin-top: .5rem;
    color:#6b7280;
    font-weight:600;
    font-size:.92rem;
  }

  /* ===== Status Switch ===== */
  .status-row{
    display:flex;
    align-items:center;
    gap: .75rem;
    margin-top: .35rem;
  }
  .switch{
    width: 56px;
    height: 32px;
    border-radius: 999px;
    background: rgba(17,24,39,.12);
    position: relative;
    cursor:pointer;
    transition: background .2s ease;
    border: 1px solid rgba(17,24,39,.10);
    flex: 0 0 auto;
  }
  .switch::after{
    content:"";
    width: 26px;
    height: 26px;
    position:absolute;
    top: 50%;
    left: 3px;
    transform: translateY(-50%);
    border-radius: 999px;
    background: #fff;
    box-shadow: 0 10px 20px rgba(0,0,0,.12);
    transition: left .2s ease;
  }
  .switch.on{
    background: rgba(34,197,94,.22);
    border-color: rgba(34,197,94,.35);
  }
  .switch.on::after{ left: 27px; }

  .status-text{
    font-weight: 900;
    color:#6b7280;
  }
  .status-text.on{ color:#16a34a; }

  /* ===== Right Preview Card ===== */
  .live-card{
    border-radius: 16px;
    border: 1px solid rgba(17,24,39,.08);
    background: rgba(17,24,39,.02);
    padding: 1rem;
    position: sticky;
    top: 90px;
  }
  .live-top{
    display:flex;
    align-items:center;
    gap:.75rem;
    margin-bottom: .75rem;
  }
  .live-ic{
    width: 52px;
    height: 52px;
    border-radius: 16px;
    display:grid;
    place-items:center;
    background: #fff;
    border: 1px solid rgba(17,24,39,.08);
    box-shadow: 0 12px 28px rgba(0,0,0,.06);
  }
  .live-ic i{ font-size: 24px; }
  .live-title{
    margin:0;
    font-weight: 950;
    color:#111827;
    line-height:1.2;
  }
  .live-desc{
    margin:.55rem 0 0 0;
    color:#6b7280;
    font-weight:600;
    line-height:1.55;
    display:-webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow:hidden;
  }
  .live-badges{
    display:flex;
    gap:.5rem;
    margin-top: .9rem;
    flex-wrap:wrap;
  }
  .badge-pill{
    padding:.35rem .6rem;
    border-radius:999px;
    font-weight:900;
    font-size:.78rem;
    border:1px solid rgba(17,24,39,.10);
    background:#fff;
    color:#374151;
  }
  .badge-pill.on{
    border-color: rgba(34,197,94,.25);
    background: rgba(34,197,94,.10);
    color:#166534;
  }

  /* ===== Buttons ===== */
  .svc-actions{
    display:flex;
    gap: .75rem;
    margin-top: 1.1rem;
    flex-wrap:wrap;
  }
  .btn-save{
    border:none;
    padding: .95rem 1.25rem;
    border-radius: 16px;
    font-weight: 950;
    cursor:pointer;
    background: linear-gradient(135deg,#22c55e,#16a34a);
    color:#052e16;
    box-shadow: 0 14px 30px rgba(34,197,94,.20);
    transition: transform .15s ease, box-shadow .15s ease, opacity .15s ease;
  }
  .btn-save:hover{ transform: translateY(-2px); box-shadow: 0 18px 40px rgba(34,197,94,.24); }
  .btn-save:active{ transform: translateY(0); opacity:.95; }

  .btn-back{
    border:none;
    padding: .95rem 1.15rem;
    border-radius: 16px;
    font-weight: 950;
    cursor:pointer;
    background: #eef2f7;
    color:#111827;
    transition: transform .15s ease, opacity .15s ease;
    text-decoration:none;
    display:inline-flex;
    align-items:center;
    gap:.5rem;
  }
  .btn-back:hover{ transform: translateY(-2px); }
  .btn-back:active{ transform: translateY(0); opacity:.95; }

  /* ===== Modal (icon picker) ===== */
  .icon-modal{
    position: fixed;
    inset: 0;
    display:none;
    z-index: 9999;
  }
  .icon-modal.show{ display:block; }
  .icon-overlay{
    position:absolute; inset:0;
    background: rgba(0,0,0,.55);
    backdrop-filter: blur(6px);
  }
  .icon-dialog{
    position: relative;
    width: min(980px, calc(100% - 32px));
    margin: 44px auto;
    background: #0b1225;
    border: 1px solid rgba(255,255,255,.10);
    border-radius: 18px;
    box-shadow: 0 30px 100px rgba(0,0,0,.60);
    overflow:hidden;
  }
  .icon-top{
    padding: 1rem 1.1rem;
    display:flex;
    align-items:flex-start;
    justify-content:space-between;
    gap: 1rem;
    border-bottom: 1px solid rgba(255,255,255,.08);
  }
  .icon-top h4{
    margin:0;
    color:#fff;
    font-weight: 950;
  }
  .icon-top p{
    margin:.25rem 0 0 0;
    color: rgba(255,255,255,.70);
    font-weight:600;
  }
  .icon-close{
    width: 44px; height: 44px;
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(255,255,255,.08);
    color:#fff;
    cursor:pointer;
    display:grid;
    place-items:center;
    font-weight: 900;
    transition: transform .15s ease, opacity .15s ease;
  }
  .icon-close:hover{ transform: translateY(-1px); }
  .icon-close:active{ transform: translateY(0); opacity:.95; }

  .icon-search{
    padding: 1rem 1.1rem;
    border-bottom: 1px solid rgba(255,255,255,.08);
  }
  .icon-search input{
    width:100%;
    padding: .95rem 1rem;
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,.12);
    background: rgba(255,255,255,.06);
    color: rgba(255,255,255,.92);
    outline: none;
    font-weight: 700;
  }
  .icon-search input::placeholder{ color: rgba(255,255,255,.55); }

  .icon-grid{
    padding: 1rem 1.1rem 1.2rem;
    display:grid;
    grid-template-columns: repeat(6, minmax(0, 1fr));
    gap: .75rem;
    max-height: 62vh;
    overflow:auto;
  }
  .icon-grid::-webkit-scrollbar{ width:10px; height:10px; }
  .icon-grid::-webkit-scrollbar-thumb{ background: rgba(255,255,255,.18); border-radius:999px; }
  .icon-grid::-webkit-scrollbar-track{ background: rgba(255,255,255,.06); border-radius:999px; }

  .icon-item{
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,.10);
    background: rgba(255,255,255,.06);
    padding: .85rem .75rem;
    cursor:pointer;
    display:flex;
    align-items:center;
    gap:.65rem;
    transition: transform .15s ease, background .15s ease, border-color .15s ease;
    color: rgba(255,255,255,.92);
    font-weight: 900;
    user-select:none;
  }
  .icon-item:hover{
    transform: translateY(-2px);
    background: rgba(255,255,255,.09);
    border-color: rgba(102,126,234,.40);
  }
  .icon-item i{
    font-size: 20px;
    width: 28px;
    text-align:center;
  }
  .icon-item span{
    font-size: .9rem;
    color: rgba(255,255,255,.85);
    white-space: nowrap;
    overflow:hidden;
    text-overflow: ellipsis;
  }

  @@media (max-width: 980px){
    .svc-page{ padding: 1.1rem; }
    .svc-grid{ grid-template-columns: 1fr; }
    .live-card{ position: static; }
    .icon-grid{ grid-template-columns: repeat(3, minmax(0, 1fr)); }
  }
</style>

<div class="svc-page">
  <div class="svc-card">
    <div class="svc-head">
      <h3>Yeni Servis Girişi</h3>
      <p>Başlık, ikon ve açıklama ekleyin</p>
    </div>

    <div class="svc-body">
      @using (Html.BeginForm("CreateService", "Service", FormMethod.Post))
      {
        <div class="svc-grid">
          <!-- Left: Form -->
          <div>
            <div class="svc-group">
              <label class="svc-label" for="ServiceTitleInput">Servis Başlığı</label>
              @Html.TextBoxFor(x => x.ServiceTitle, new {
                  @class="svc-input",
                  id="ServiceTitleInput",
                  placeholder="Örn: Hızlı Servis",
                  autocomplete="off"
              })
            </div>

            <div class="svc-group">
              <label class="svc-label" for="ServiceIconInput">İkon</label>

              <div class="icon-row">
                @Html.TextBoxFor(x => x.ServiceIcon, new {
                    @class="svc-input",
                    id="ServiceIconInput",
                    placeholder="Örn: briefcase (Bootstrap Icons)",
                    autocomplete="off"
                })

                <div class="icon-preview" title="Canlı preview">
                  <i id="IconPreview" class="bi bi-question-circle"></i>
                </div>

                <button type="button" class="btn-pick" id="OpenIconModal">
                  İkon Seç
                </button>
              </div>

              <div class="hint">Seçim yapınca otomatik yazılır. İstersen elle yaz, preview hemen değişir.</div>
            </div>

            <div class="svc-group">
              <label class="svc-label" for="ServiceDescInput">Açıklama</label>
              @Html.TextAreaFor(x => x.ServiceDescription, new {
                  @class="svc-textarea",
                  id="ServiceDescInput",
                  placeholder="Servis açıklaması..."
              })
            </div>

            <div class="svc-group">
              <label class="svc-label">Durum</label>

              <!-- hidden checkbox (MVC bind için) -->
              <div style="display:none;">
                @Html.CheckBoxFor(x => x.ServiceStatus, new { id="ServiceStatusInput" })
              </div>

              <div class="status-row">
                <div class="switch" id="StatusSwitch" role="button" tabindex="0" aria-label="Aktif/Pasif"></div>
                <div class="status-text" id="StatusText">Pasif</div>
              </div>
            </div>

            <div class="svc-actions">
              <button type="submit" class="btn-save">✅ Ekle</button>
              <a class="btn-back" asp-action="ServiceList" asp-controller="Service">↩️ Geri Dön</a>
            </div>
          </div>

          <!-- Right: Live Preview -->
          <div class="live-card">
            <div class="live-top">
              <div class="live-ic">
                <i id="LiveIcon" class="bi bi-question-circle"></i>
              </div>
              <div>
                <p class="live-title" id="LiveTitle">Örn: Hızlı Servis</p>
                <div class="live-badges">
                  <span class="badge-pill" id="LiveIconText">bi-question-circle</span>
                  <span class="badge-pill" id="LiveStatusBadge">Pasif</span>
                </div>
              </div>
            </div>
            <p class="live-desc" id="LiveDesc">Servis açıklaması burada canlı görünür.</p>
          </div>
        </div>
      }
    </div>
  </div>
</div>

<!-- ===== Icon Picker Modal ===== -->
<div class="icon-modal" id="IconModal" aria-hidden="true">
  <div class="icon-overlay" id="IconOverlay"></div>

  <div class="icon-dialog" role="dialog" aria-modal="true" aria-label="İkon Seç">
    <div class="icon-top">
      <div>
        <h4>İkon Seç</h4>
        <p>Ara ve tıkla seç (Bootstrap Icons)</p>
      </div>
      <button type="button" class="icon-close" id="CloseIconModal">✕</button>
    </div>

    <div class="icon-search">
      <input type="text" id="IconSearch" placeholder="Ara: activity, bag, bell, calendar..." autocomplete="off" />
    </div>

    <div class="icon-grid" id="IconGrid">
      <!-- JS dolduracak -->
    </div>
  </div>
</div>
@section Scripts{
<script>
  (function () {
    // ✅ Buraya senin en çok kullanacağın iconları koydum.
    // İstersen listeyi büyütebilirsin (Bootstrap Icons isimleri).
    const ICONS = [
      "activity","alarm","app","archive","award","bag","bag-check","basket","bell","bell-fill",
      "bookmark","bookmark-star","box","briefcase","building","calendar","camera","cart","chat",
      "check","check2-circle","clipboard","clock","cloud","coffee","compass","cpu","credit-card",
      "dash-circle","diagram-3","download","envelope","exclamation-triangle","eye","file-earmark",
      "flag","folder","gear","geo-alt","gift","graph-up","grid","hammer","hand-thumbs-up","heart",
      "house","image","info-circle","key","lightning","link-45deg","list","lock","map","mic","moon",
      "music-note","palette","patch-check","people","person","phone","pie-chart","pin","play-circle",
      "plus-circle","printer","receipt","search","send","shield-check","shop","star","sun","tag","trash",
      "truck","tv","upload","wallet","wifi","wrench"
    ];

    const $ = (id) => document.getElementById(id);

    const titleInput = $("ServiceTitleInput");
    const iconInput  = $("ServiceIconInput");
    const descInput  = $("ServiceDescInput");
    const statusCb   = $("ServiceStatusInput");

    const iconPreview = $("IconPreview");
    const liveIcon    = $("LiveIcon");
    const liveTitle   = $("LiveTitle");
    const liveDesc    = $("LiveDesc");
    const liveIconTxt = $("LiveIconText");
    const liveStatus  = $("LiveStatusBadge");

    const modal = $("IconModal");
    const overlay = $("IconOverlay");
    const openBtn = $("OpenIconModal");
    const closeBtn = $("CloseIconModal");
    const iconGrid = $("IconGrid");
    const iconSearch = $("IconSearch");

    const switchEl = $("StatusSwitch");
    const statusText = $("StatusText");

    function normalizeIconName(val) {
      // user "bi bi-activity" yazarsa düzelt
      if (!val) return "";
      val = val.trim();
      val = val.replace(/^bi\s+bi-/, ""); // "bi bi-activity" -> "activity"
      val = val.replace(/^bi-/, "");      // "bi-activity" -> "activity"
      return val.trim();
    }

    function applyIcon(iconNameRaw) {
      const iconName = normalizeIconName(iconNameRaw);
      const klass = iconName ? ("bi bi-" + iconName) : "bi bi-question-circle";

      iconPreview.className = klass;
      liveIcon.className = klass;

      liveIconTxt.textContent = iconName ? ("bi-" + iconName) : "bi-question-circle";
    }

    function applyTitle(val) {
      const v = (val || "").trim();
      liveTitle.textContent = v.length ? v : "Örn: Hızlı Servis";
    }

    function applyDesc(val) {
      const v = (val || "").trim();
      liveDesc.textContent = v.length ? v : "Servis açıklaması burada canlı görünür.";
    }

    function applyStatus(isOn) {
      if (isOn) {
        switchEl.classList.add("on");
        statusText.classList.add("on");
        statusText.textContent = "Aktif";
        liveStatus.classList.add("on");
        liveStatus.textContent = "Aktif";
      } else {
        switchEl.classList.remove("on");
        statusText.classList.remove("on");
        statusText.textContent = "Pasif";
        liveStatus.classList.remove("on");
        liveStatus.textContent = "Pasif";
      }
      statusCb.checked = !!isOn;
    }

    function openModal() {
      modal.classList.add("show");
      modal.setAttribute("aria-hidden", "false");
      iconSearch.value = "";
      renderIcons(ICONS);
      setTimeout(() => iconSearch.focus(), 50);
      document.body.style.overflow = "hidden";
    }

    function closeModal() {
      modal.classList.remove("show");
      modal.setAttribute("aria-hidden", "true");
      document.body.style.overflow = "";
    }

    function renderIcons(list) {
      iconGrid.innerHTML = "";
      const frag = document.createDocumentFragment();

      list.forEach(name => {
        const btn = document.createElement("div");
        btn.className = "icon-item";
        btn.setAttribute("data-name", name);
        btn.innerHTML = `<i class="bi bi-${name}"></i><span>${name}</span>`;
        btn.addEventListener("click", () => {
          iconInput.value = name;
          applyIcon(name);
          closeModal();
        });
        frag.appendChild(btn);
      });

      iconGrid.appendChild(frag);
    }

    // ===== init values (edit değil create ama yine de sağlam) =====
    applyTitle(titleInput.value);
    applyDesc(descInput.value);
    applyIcon(iconInput.value);
    applyStatus(statusCb.checked);

    // ===== events =====
    titleInput.addEventListener("input", e => applyTitle(e.target.value));
    descInput.addEventListener("input", e => applyDesc(e.target.value));
    iconInput.addEventListener("input", e => applyIcon(e.target.value));

    openBtn.addEventListener("click", openModal);
    closeBtn.addEventListener("click", closeModal);
    overlay.addEventListener("click", closeModal);

    iconSearch.addEventListener("input", (e) => {
      const q = (e.target.value || "").trim().toLowerCase();
      if (!q) return renderIcons(ICONS);
      renderIcons(ICONS.filter(x => x.includes(q)));
    });

    // ESC kapatsın
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && modal.classList.contains("show")) closeModal();
    });

    // Status switch
    switchEl.addEventListener("click", () => applyStatus(!statusCb.checked));
    switchEl.addEventListener("keydown", (e) => {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        applyStatus(!statusCb.checked);
      }
    });
  })();
</script>
}