@using YummyUI.DTOs.CategoryDTOs
@model List<ResultCategoryDto>
<!-- Section Title -->
<div class="container section-title" data-aos="fade-up">
  <h2>Our Menu</h2>
  <p><span>Check Our</span> <span class="description-title">Yummy Menu</span></p>
</div><!-- End Section Title -->

<div class="container">

  <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="100">
    @{
      bool isFirst = true;
    }

    @foreach (var item in Model)
    {
      <li class="nav-item">
        <a class="nav-link @(isFirst ? "active show" : "")" data-bs-toggle="tab" data-bs-target="#menu-@item.CategoryId">
          <h4>@item.CategoryName</h4>
        </a>
      </li>

      isFirst = false;
    }

  </ul>
@await Component.InvokeAsync("_MenuBreakfastSectionPartials")
</div>