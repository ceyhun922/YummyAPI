@{
  // Aktif menü için
  var currentController = (ViewContext.RouteData.Values["controller"]?.ToString() ?? "").ToLowerInvariant();
  var currentAction = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").ToLowerInvariant();

  string IsActive(string c, string a = "")
  {
    c = (c ?? "").ToLowerInvariant();
    a = (a ?? "").ToLowerInvariant();
    var okC = currentController == c;
    var okA = string.IsNullOrWhiteSpace(a) || currentAction == a;
    return (okC && okA) ? "is-active" : "";
  }
}

<style>
  /* ===== Premium Sidebar ===== */
  #sidebar-wrapper{
    position: relative;
    overflow: hidden;
    background:
      radial-gradient(900px 600px at 10% 0%, rgba(139,92,246,.22), transparent 60%),
      radial-gradient(900px 600px at 100% 30%, rgba(56,189,248,.18), transparent 55%),
