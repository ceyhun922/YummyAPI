  }

  #sidebar-wrapper .sidebar-brand{
    position:relative;
    z-index:2;
    padding: 18px 16px 14px 16px;
    border-bottom: 1px solid rgba(255,255,255,.08);
    display:flex;
    align-items:center;
    gap: 12px;
  }

  #sidebar-wrapper .sidebar-brand a{
    display:flex;
    align-items:center;
    gap: 12px;
    text-decoration:none;
    width:100%;
  }

  #sidebar-wrapper .sidebar-brand img.header-logo{
    width:40px;
    height:40px;
    border-radius:14px;
