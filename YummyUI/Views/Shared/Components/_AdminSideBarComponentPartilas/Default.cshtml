  }

  #sidebar-wrapper .sidebar-brand .logo-name{
    font-weight: 950;
    letter-spacing:.3px;
    font-size: 1.05rem;
    background: linear-gradient(135deg,#ffffff,#a8b9ff);
    -webkit-background-clip:text;
    -webkit-text-fill-color:transparent;
  }

  /* menu */
  #sidebar-wrapper .sidebar-menu{
    position:relative;
    z-index:2;
    padding: 12px 10px 16px 10px;
    margin:0;
    list-style:none;
  }

  .menu-section{
    margin: 14px 10px 8px 10px;
    padding: 0 8px;
    color: rgba(255,255,255,.50);
    font-weight: 900;
    font-size: .72rem;
    letter-spacing: .18rem;
    text-transform: uppercase;
    display:flex;
    align-items:center;
    gap: 8px;
  }

  .menu-section::after{
    content:"";
    flex:1;
    height:1px;
    background: rgba(255,255,255,.08);
  }

  #sidebar-wrapper .sidebar-menu > li{
    margin: 6px 6px;
  }

  #sidebar-wrapper .sidebar-menu .nav-link{
    position:relative;
    display:flex;
    align-items:center;
    gap: 12px;
    padding: 12px 12px;
    border-radius: 16px;
    text-decoration:none;
    color: rgba(255,255,255,.78);
    border: 1px solid rgba(255,255,255,.08);
    background: rgba(255,255,255,.02);
    transition: transform .15s ease, background .15s ease, border-color .15s ease, box-shadow .15s ease;
    overflow:hidden;
  }

  #sidebar-wrapper .sidebar-menu .nav-link i[data-feather]{
    width:18px;
    height:18px;
    opacity:.9;
  }

  #sidebar-wrapper .sidebar-menu .nav-link span{
    font-weight: 900;
    letter-spacing:.1px;
    font-size: .93rem;
  }

  /* hover glow */
  #sidebar-wrapper .sidebar-menu .nav-link::before{
    content:"";
    position:absolute; inset:0;
    opacity:0;
    transition: opacity .15s ease;
    background: radial-gradient(300px 120px at 20% 0%, rgba(139,92,246,.22), transparent 60%);
    pointer-events:none;
  }

  #sidebar-wrapper .sidebar-menu .nav-link:hover{
    transform: translateX(4px);
    background: rgba(102,126,234,.10);
    border-color: rgba(102,126,234,.35);
    box-shadow: 0 18px 40px rgba(0,0,0,.35);
  }
  #sidebar-wrapper .sidebar-menu .nav-link:hover::before{ opacity:1; }

  /* active */
  #sidebar-wrapper .sidebar-menu .nav-link.is-active{
    color:#fff;
    background: linear-gradient(135deg, rgba(102,126,234,.35), rgba(118,75,162,.22));
    border-color: rgba(102,126,234,.55);
    box-shadow: 0 20px 55px rgba(102,126,234,.18);
  }
  #sidebar-wrapper .sidebar-menu .nav-link.is-active::after{
    content:"";
    position:absolute;
    left:0; top:10px; bottom:10px;
    width:4px;
    border-radius: 999px;
    background: linear-gradient(180deg,#667eea,#764ba2);
  }

  /* special: Siteye Git */
  .nav-link.go-site{
    background: linear-gradient(135deg, rgba(34,197,94,.18), rgba(59,130,246,.10)) !important;
    border-color: rgba(34,197,94,.25) !important;
  }
  .nav-link.go-site:hover{
    background: linear-gradient(135deg, rgba(34,197,94,.28), rgba(59,130,246,.14)) !important;
    border-color: rgba(34,197,94,.40) !important;
  }

  /* logout */
  .nav-link.logout{
    background: rgba(239,68,68,.10) !important;
    border-color: rgba(239,68,68,.22) !important;
  }
  .nav-link.logout:hover{
    background: rgba(239,68,68,.18) !important;
    border-color: rgba(239,68,68,.40) !important;
  }
</style>

