@using YummyUI.DTOs.ChefDTOs
@model List<ResultChefDto>
<!-- Section Title -->
<div class="container section-title" data-aos="fade-up">
  <h2>chefs</h2>
  <p><span>Our</span> <span class="description-title">Proffesional Chefs<br></span></p>
</div><!-- End Section Title -->

<div class="container">

  <div class="row gy-4">

    @foreach (var item in Model)
    {
      <div class="col-lg-4 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
        <div class="team-member">
          <div class="member-img">
          @{
                  var apiBase ="http://localhost:5289";
                }
            <img src="@(apiBase +item.ImageFile)" class="img-fluid" alt="@item.ChefName">
            <div class="social">
              <a href="@item.ChefXUrl"><i class="bi bi-twitter-x"></i></a>
              <a href="@item.ChefFacebookUrl"><i class="bi bi-facebook"></i></a>
              <a href="@item.ChefInstagramUrl"><i class="bi bi-instagram"></i></a>
              <a href="@item.ChefLinkedinUrl"><i class="bi bi-linkedin"></i></a>
            </div>
          </div>
          <div class="member-info">
            <h4>@item.ChefName</h4>
            <span>@item.ChefTitle</span>
            <p>@item.ChefDescription</p>
          </div>
        </div>
      </div>
    }
  </div>

</div>