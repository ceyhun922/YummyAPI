@using YummyUI.DTOs.MessageDTOs
@model List<ResultMessageDto>

@{
    Layout ="_AdminLayout";
}

 <div class="section-body">
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h4>MesajLar</h4>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>İsim Soyisim</th>
                            <th>Mesajın Konusu</th>
                            <th>Mesaj</th>
                            <th>Mesajı Gönderenin E-maili</th>
                            <th>Mesajın Gönderilme zamanı</th>
                            <th>Mesajın Durumu</th>

                          </tr>
                        </thead>
                        <tbody>
                            @foreach(var message in Model)
                            {
                          <tr>
                            <td>@message.ContactId</td>
                            <td>@message.FullName</td>
                            <td>@message.Subject</td>
                            <td>@message.Message</td>
                            <td>@message.Email</td>
                            <td>@message.GetDate</td>
                            <td>@(message.IsRead ? "Okundu" : "Okunmadı")</td>
                          </tr>
                            }
                         
                         
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>