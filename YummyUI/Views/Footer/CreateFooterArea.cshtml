</div>

@section Scripts{
<script>
(function(){
  const bind = (name, targetId) => {
    const el = document.querySelector(`[name="${name}"]`);
    const pv = document.getElementById(targetId);
    if(!el || !pv) return;
    const sync = () => pv.textContent = (el.value && el.value.trim()) ? el.value : "-";
    el.addEventListener("input", sync);
    sync();
  };

  bind("Address", "pvAddress");
  bind("CallUs", "pvPhone");
  bind("EmailUs", "pvEmail");
  bind("OpeningHours", "pvHours");
})();
</script>
}
