@section Styles{
<style>
/* ===== Premium Glass (page scoped) ===== */
.pg, .pg *{box-sizing:border-box}
.pg{
  min-height:100%;
  padding: 1.6rem 2rem 2.2rem;
  position:relative;
  overflow:hidden;
  background:
    radial-gradient(1200px 600px at 70% 80%, rgba(56,189,248,.16), transparent 60%),
    radial-gradient(900px 500px at 15% 20%, rgba(139,92,246,.20), transparent 60%),
    radial-gradient(800px 420px at 90% 10%, rgba(99,102,241,.14), transparent 55%),
    linear-gradient(135deg, #070b1f 0%, #0a1030 40%, #050818 100%);
}
.pg .orb{position:absolute;border-radius:999px;filter:blur(110px);opacity:.50;pointer-events:none;animation:floaty 14s ease-in-out infinite}
.pg .orb.a{width:520px;height:520px;left:-180px;top:-180px;background:rgba(139,92,246,.34)}
.pg .orb.b{width:460px;height:460px;right:-190px;top:110px;background:rgba(56,189,248,.30);animation-delay:3s}
.pg .orb.c{width:560px;height:560px;left:38%;bottom:-260px;background:rgba(99,102,241,.24);animation-delay:6s}
@@keyframes floaty{0%,100%{transform:translate(0,0) scale(1)}50%{transform:translate(18px,-14px) scale(1.04)}}

.pg .wrap{position:relative;z-index:2;max-width:1100px;margin:0 auto;display:flex;flex-direction:column;gap:14px}
.pg .panel{
  background: rgba(255,255,255,.06);
  border: 1px solid rgba(255,255,255,.12);
  border-radius: 28px;
  backdrop-filter: blur(18px);
  box-shadow: 0 40px 90px rgba(0,0,0,.45);
  overflow:hidden;
  padding: 18px;
}

.pg .titleRow{display:flex;align-items:flex-start;justify-content:space-between;gap:14px;flex-wrap:wrap}
.pg .titleBox{display:flex;align-items:center;gap:12px}
.pg .badge{
  width:56px;height:56px;border-radius:18px;display:grid;place-items:center;
  background: rgba(255,255,255,.07);
  border: 1px solid rgba(255,255,255,.12);
  box-shadow: 0 18px 55px rgba(0,0,0,.45);
}
.pg .badge i{font-size:26px;color:#f7b500}
.pg .h1{
  margin:0;font-size:1.85rem;font-weight:950;
  background: linear-gradient(135deg,#fff,#a8b9ff);
  -webkit-background-clip:text;-webkit-text-fill-color:transparent;
}
.pg .sub{margin:.25rem 0 0;color:rgba(255,255,255,.70);font-weight:850}
.pg .chip{
  padding:.45rem .8rem;border-radius:999px;border:1px solid rgba(255,255,255,.12);
  background: rgba(255,255,255,.06);
  color: rgba(255,255,255,.88);
  font-weight:950;font-size:.85rem;white-space:nowrap;
  display:inline-flex;align-items:center;gap:.5rem;
}

.pg .grid{
  margin-top: 14px;
  display:grid;
  grid-template-columns: 1.1fr .9fr;
  gap: 14px;
}
@@media (max-width: 980px){ .pg .grid{grid-template-columns: 1fr;} }

.pg .card{
  background: rgba(255,255,255,.06);
  border: 1px solid rgba(255,255,255,.12);
  border-radius: 24px;
  backdrop-filter: blur(16px);
  box-shadow: 0 26px 70px rgba(0,0,0,.35);
  padding: 14px;
}

.pg .label{color:rgba(233,236,255,.72);font-weight:900;font-size:.85rem;margin: 2px 0 8px}
.pg .input{
  width:100%;
  border:1px solid rgba(255,255,255,.12);
  background: rgba(0,0,0,.14);
  color:#fff;
  border-radius: 16px;
  padding: .75rem .9rem;
  outline:0;
  font-weight:850;
}
.pg .input::placeholder{color:rgba(255,255,255,.55)}
.pg .helper{margin-top:7px;color:rgba(255,255,255,.62);font-weight:800;font-size:.82rem;line-height:1.35}

.pg .btns{display:flex;gap:10px;flex-wrap:wrap;margin-top:12px;justify-content:flex-end}
.pg .btnA{
  border:0; cursor:pointer; text-decoration:none;
  padding:.78rem 1rem; border-radius: 16px;
  font-weight:950; font-size:.88rem;
  display:inline-flex; align-items:center; gap:.55rem;
  transition: transform .15s ease, box-shadow .15s ease, opacity .15s ease;
  box-shadow: 0 14px 34px rgba(0,0,0,.25);
}
.pg .btnA:hover{transform: translateY(-2px); box-shadow: 0 18px 45px rgba(0,0,0,.35)}
.pg .btnA:active{transform: translateY(0); opacity:.96}
.pg .primary{background: linear-gradient(135deg,#f7b500,#ffcc33); color:#1b1300}
.pg .soft{
  background: rgba(255,255,255,.08);
  border:1px solid rgba(255,255,255,.12);
  color: rgba(255,255,255,.92);
}

.pg .previewTop{display:flex;align-items:center;gap:10px}
.pg .previewIcon{
  width:44px;height:44px;border-radius:16px;display:grid;place-items:center;
  border:1px solid rgba(255,255,255,.12);
  background: rgba(0,0,0,.18);
}
.pg .quote{
