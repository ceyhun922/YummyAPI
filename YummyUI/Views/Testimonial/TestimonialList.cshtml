@using YummyUI.DTOs.TestimonialDTOs
@model List<ResultTestimonialDto>

@{
    Layout = "_AdminLayout";
    var count = 0;
                      string? apiBase ="http://localhost:5289";

}

<style>
  .ai-powered-container, .ai-powered-container * { box-sizing: border-box; }

  .ai-powered-container{
    min-height: 100%;
    padding: 1.6rem 2rem;
    position: relative;
    overflow: hidden;

    background:
      radial-gradient(1200px 600px at 70% 80%, rgba(56,189,248,0.22), transparent 60%),
      radial-gradient(900px 500px at 15% 20%, rgba(139,92,246,0.26), transparent 60%),
      radial-gradient(800px 420px at 90% 10%, rgba(99,102,241,0.20), transparent 55%),
      linear-gradient(135deg, #070b1f 0%, #0a1030 40%, #050818 100%);
  }

  .grid-overlay{
    position:absolute; inset:0; pointer-events:none; opacity:.18;
    background-image:
      linear-gradient(rgba(255,255,255,0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.06) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  .orb{
    position:absolute; border-radius:999px;
    filter:blur(90px); opacity:.55; pointer-events:none;
    animation: floaty 14s ease-in-out infinite;
  }
  .orb.a{ width:480px;height:480px;left:-160px;top:-160px;background:rgba(139,92,246,.40); }
  .orb.b{ width:420px;height:420px;right:-170px;top:120px;background:rgba(56,189,248,.36);animation-delay:3s;}
  .orb.c{ width:520px;height:520px;left:35%;bottom:-240px;background:rgba(99,102,241,.30);animation-delay:6s;}
  @@keyframes floaty{
    0%,100%{ transform: translate(0,0) scale(1); }
    50%{ transform: translate(16px,-12px) scale(1.04); }
  }

  .content-wrapper{
    position:relative; z-index:5;
    max-width:1600px; width:100%; margin:0 auto;
    display:flex; flex-direction:column; gap:1rem;
  }

  /* header */
  .page-header{
    display:flex; justify-content:space-between; align-items:center;
    gap:1rem; padding:.2rem 0;
  }
  .header-left{ display:flex; align-items:center; gap:.9rem; }
  .header-badge{
    width:52px;height:52px;border-radius:16px;
    display:grid;place-items:center;
    background:linear-gradient(135deg,#667eea,#764ba2);
    box-shadow:0 12px 35px rgba(102,126,234,.6);
    border:1px solid rgba(255,255,255,.12);
  }
  .header-badge span{ font-size:1.6rem; }

  .page-title{
    margin:0;
    font-size:2rem;
    font-weight:900;
    background:linear-gradient(135deg,#ffffff,#a8b9ff);
    -webkit-background-clip:text;
    -webkit-text-fill-color:transparent;
  }

  .btn-add{
    display:inline-flex; align-items:center; gap:.6rem;
    padding:1rem 1.25rem; border-radius:16px;
    font-weight:900; color:#fff; text-decoration:none;
    background: linear-gradient(135deg,#667eea,#764ba2);
    box-shadow: 0 14px 40px rgba(102,126,234,.6);
    border: 1px solid rgba(255,255,255,.14);
    transition: transform .15s ease, opacity .15s ease, box-shadow .15s ease;
    white-space: nowrap;
  }
  .btn-add:hover{ transform: translateY(-2px); box-shadow: 0 18px 55px rgba(102,126,234,.75); }
  .btn-add:active{ transform: translateY(0); opacity:.96; }

  /* toolbar: search + filter */
  .t-toolbar{
    display:flex;
    gap: .9rem;
    align-items:center;
    justify-content:space-between;
    flex-wrap:wrap;
  }

  .t-search{
    flex: 1;
    min-width: 280px;
    display:flex;
    align-items:center;
    gap:.65rem;
    padding:.85rem 1rem;
    border-radius: 18px;
    border: 1px solid rgba(255,255,255,.12);
    background: rgba(255,255,255,.06);
    backdrop-filter: blur(10px);
    box-shadow: 0 20px 55px rgba(0,0,0,.25);
  }
  .t-search i{ color: rgba(255,255,255,.70); font-size:1.05rem; }
  .t-search input{
    width:100%;
    border:none;
    outline:none;
    background:transparent;
    color: rgba(255,255,255,.92);
    font-weight:850;
  }
  .t-search input::placeholder{ color: rgba(255,255,255,.55); font-weight:800; }

  .t-filters{ display:flex; gap:.5rem; flex-wrap:wrap; }
  .t-chip{
    border:none;
    padding:.7rem 1rem;
    border-radius: 999px;
    font-weight:950;
    color: rgba(255,255,255,.85);
    background: rgba(255,255,255,.06);
    border: 1px solid rgba(255,255,255,.12);
    cursor:pointer;
    transition: transform .15s ease, background .15s ease, border-color .15s ease;
  }
  .t-chip:hover{ transform: translateY(-1px); background: rgba(255,255,255,.09); }
  .t-chip.active{
    background: linear-gradient(135deg,#667eea,#764ba2);
    border-color: rgba(255,255,255,.18);
    color:#fff;
  }

  /* grid cards */
  .cards-grid{
    display:grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.1rem;
  }
  @@media (max-width: 1000px){
    .cards-grid{ grid-template-columns: 1fr; }
  }

  /* card */
  .t-card{
    border-radius: 26px;
    overflow:hidden;
    border: 1px solid rgba(255,255,255,.12);
    background:
      linear-gradient(120deg,
        rgba(15,23,60,0.90) 0%,
        rgba(20,30,80,0.82) 45%,
        rgba(56,189,248,0.15) 100%);
    backdrop-filter: blur(16px);
    box-shadow: 0 40px 80px rgba(0,0,0,.45), inset 0 1px 0 rgba(255,255,255,.06);

    padding: 1.35rem 1.35rem;
    display:flex;
    flex-direction:column;
    gap: .9rem;

    transform: translateY(10px);
    opacity: 0;
    animation: cardIn .55s ease forwards;
  }

  @@keyframes cardIn { to { transform: translateY(0); opacity: 1; } }

  .t-top{
    display:flex;
    align-items:flex-start;
    gap: 1rem;
  }

  .t-avatar{
    width: 60px;
    height: 60px;
    border-radius: 18px;
    overflow:hidden;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    box-shadow: 0 18px 40px rgba(0,0,0,.35);
    flex: 0 0 auto;
    position: relative;
  }
  .t-avatar img{
    width:100%;
    height:100%;
    object-fit:cover;
    display:block;
  }
  .t-initial{
    position:absolute; inset:0;
    display:grid; place-items:center;
    font-weight: 950;
    color: rgba(255,255,255,.92);
    background: linear-gradient(135deg, rgba(102,126,234,.85), rgba(118,75,162,.75));
    letter-spacing:.5px;
  }

  .t-meta{
    flex: 1;
    min-width: 0;
    display:flex;
    flex-direction:column;
    gap: .25rem;
  }

  .t-name{
    color:#fff;
    font-weight: 950;
    font-size: 1.1rem;
    line-height: 1.2;
    margin: 0;
    white-space: nowrap;
    overflow:hidden;
    text-overflow: ellipsis;
  }

  .t-title{
    color: rgba(199,210,254,.92);
    font-weight: 800;
    font-size: .9rem;
    margin: 0;
    white-space: nowrap;
    overflow:hidden;
    text-overflow: ellipsis;
  }

  /* ‚úÖ status = button */
  .t-status{
    margin-left: auto;
    display:inline-flex;
    align-items:center;
    gap:.45rem;
    padding: .55rem .9rem;
    border-radius: 999px;
    font-weight: 950;
    font-size: .8rem;
    white-space: nowrap;
    border: 1px solid rgba(255,255,255,.12);
    background: rgba(255,255,255,.06);
    color: rgba(255,255,255,.86);
    cursor:pointer;
    transition: transform .15s ease, background .15s ease;
  }
  .t-status:hover{ transform: translateY(-1px); background: rgba(255,255,255,.09); }
  .t-status:disabled{ opacity:.6; cursor:not-allowed; transform:none; }

  .dot{
    width:10px;
    height:10px;
    border-radius:999px;
    background: rgba(245,158,11,.95);
    box-shadow: 0 0 18px rgba(245,158,11,.55);
  }
  .t-status.active .dot{
    background: rgba(34,197,94,.95);
    box-shadow: 0 0 18px rgba(34,197,94,.55);
  }

  .t-message{
    color: rgba(255,255,255,.75);
    line-height: 1.6;
    font-size: .98rem;
    margin: 0;
  }

  .t-quote{
    position: relative;
    padding-left: 1.1rem;
  }
  .t-quote::before{
    content: "‚Äú";
    position:absolute;
    left: 0;
    top: -8px;
    font-size: 2.2rem;
    line-height: 1;
    color: rgba(102,126,234,.75);
    text-shadow: 0 10px 25px rgba(102,126,234,.35);
  }

  .t-clamp{
    display:-webkit-box;
    -webkit-line-clamp:3;
    -webkit-box-orient:vertical;
    overflow:hidden;
  }
  .t-more{
    margin-top:.25rem;
    border:none;
    background: transparent;
    color: rgba(168,185,255,.95);
    font-weight:950;
    cursor:pointer;
    padding:0;
    align-self:flex-start;
  }
  .t-more:hover{ text-decoration: underline; }

  .t-actions{
    display:flex;
    gap: .7rem;
    flex-wrap: wrap;
    justify-content: flex-end;
    margin-top: .2rem;
  }

  .action-btn{
    border:none;
    padding: .72rem 1rem;
    border-radius: 16px;
    font-weight: 950;
    font-size: .85rem;
    color:#fff;
    text-decoration:none;
    display:inline-flex;
    align-items:center;
    gap:.5rem;
    transition: transform .15s ease, opacity .15s ease, box-shadow .15s ease;
    white-space: nowrap;
  }
  .action-btn:hover{ transform: translateY(-2px); box-shadow: 0 14px 35px rgba(0,0,0,.35); }
  .action-btn:active{ transform: translateY(0); opacity:.96; }

  .btn-del{ background: linear-gradient(135deg,#ef4444,#dc2626); }
  .btn-edit{ background: linear-gradient(135deg,#fbbf24,#f59e0b); color:#1a1a1a; }

  .empty-state{
    border-radius: 28px;
    border: 1px solid rgba(255,255,255,.12);
    background: rgba(15,23,42,.55);
    backdrop-filter: blur(16px);
    box-shadow: 0 40px 80px rgba(0,0,0,.45);
    padding: 2.2rem;
    text-align:center;
    color: rgba(255,255,255,.78);
  }
  .empty-state h2{
    margin: 0 0 .5rem 0;
    color:#fff;
    font-weight: 950;
  }
  .empty-state p{ margin:0 0 1.2rem 0; color: rgba(255,255,255,.70); }

  /* ‚úÖ toast */
  .toast{
    position:fixed; right:18px; bottom:18px;
    padding:12px 14px; border-radius:16px;
    background:rgba(15,23,42,.72);
    border:1px solid rgba(255,255,255,.14);
    backdrop-filter:blur(14px);
    color:rgba(255,255,255,.9);
    box-shadow:0 30px 70px rgba(0,0,0,.5);
    display:none; gap:10px; align-items:flex-start;
    max-width:340px; z-index:9999;
  }
  .toast.show{ display:flex; animation: pop .18s ease-out; }
  @@keyframes pop{ from{ transform:translateY(8px); opacity:0 } to{ transform:translateY(0); opacity:1 } }
  .toast .t-title{ font-weight:900; margin:0; font-size:.9rem; }
  .toast .t-desc{ margin:.15rem 0 0; color:rgba(255,255,255,.72); font-weight:650; font-size:.85rem; }
  .toast .x{ margin-left:auto; cursor:pointer; opacity:.85; }

  @@media (max-width: 900px){
    .ai-powered-container{ padding: 1.1rem; }
    .page-title{ font-size: 1.6rem; }
  }
</style>

<div class="ai-powered-container">
  <div class="orb a"></div>
  <div class="orb b"></div>
  <div class="orb c"></div>
  <div class="grid-overlay"></div>

  <!-- ‚úÖ global token -->
  <form id="antiForgeryForm" style="display:none;">
    @Html.AntiForgeryToken()
  </form>

  <div class="content-wrapper">
    <div class="page-header">
      <div class="header-left">
        <div class="header-badge"><span>üí¨</span></div>
        <h1 class="page-title">M√º≈üteri Yorumlarƒ±</h1>
      </div>

      <a asp-action="CreateTestimonial" asp-controller="Testimonial" class="btn-add">
        ‚ûï Yeni M√º≈üteri Ekle
      </a>
    </div>

    <div class="t-toolbar">
      <div class="t-search">
        <i class="bi bi-search"></i>
        <input id="TSearch" type="text" placeholder="ƒ∞sim, √ºnvan, mesajda axtar..." autocomplete="off" />
      </div>

      <div class="t-filters">
        <button type="button" class="t-chip active" data-filter="all">Hepsi</button>
        <button type="button" class="t-chip" data-filter="active">Aktif</button>
        <button type="button" class="t-chip" data-filter="passive">Pasif</button>
      </div>
    </div>

    @if (Model != null && Model.Any())
    {
      <div class="cards-grid">
        @foreach (var item in Model)
        {
          var safeText = $"{item.TestimonialName} {item.TestimonialTitle} {item.TestimonialMessage}".ToLower();
          var initial = !string.IsNullOrWhiteSpace(item.TestimonialName) ? item.TestimonialName.Trim().Substring(0, 1).ToUpper() : "?";

          <div class="t-card"
               data-status="@(item.TestimonialStatus ? "active" : "passive")"
               data-text="@safeText"
               style="animation-delay:@(count * 0.06)s">

            <div class="t-top">
              <div class="t-avatar">

                <img src="@(apiBase + item.TestimonialImageUrl)"
                     alt="@item.TestimonialName"
                     loading="lazy"
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='grid';" />
                <div class="t-initial" style="display:none;">@initial</div>
              </div>

              <div class="t-meta">
                <p class="t-name">@item.TestimonialName</p>
                <p class="t-title">@item.TestimonialTitle</p>
              </div>

              <!-- ‚úÖ Toggle status button -->
              <button type="button"
                      class="t-status js-toggle @(item.TestimonialStatus ? "active" : "")"
                      data-id="@item.TestimonialId"
                      data-post="@Url.Action("ChangeTestimonialStatus","Testimonial", new { id = item.TestimonialId })">
                <span class="dot"></span>
                @(item.TestimonialStatus ? "Aktif" : "Pasif")
              </button>
            </div>

            <div class="t-quote">
              <p class="t-message t-clamp" id="msg-@item.TestimonialId">@item.TestimonialMessage</p>
              <button type="button" class="t-more" data-target="msg-@item.TestimonialId">Daha √ßox</button>
            </div>

            <div class="t-actions">
              <a href="javascript:void(0)"
                 class="action-btn btn-del js-del"
                 data-id="@item.TestimonialId"
                 data-name="@item.TestimonialName">
                üóëÔ∏è Sil
              </a>

              <a class="action-btn btn-edit"
                 asp-action="UpdateTestimonial"
                 asp-controller="Testimonial"
                 asp-route-id="@item.TestimonialId">
                ‚úèÔ∏è G√ºncelle
              </a>
            </div>
          </div>

          count++;
        }
      </div>
    }
    else
    {
      <div class="empty-state">
        <h2>Hen√ºz m√º≈üteri yorumu yok</h2>
        <p>ƒ∞lk yorumu ekleyerek ba≈ülayabilirsin.</p>
        <a asp-action="CreateTestimonial" asp-controller="Testimonial" class="btn-add">
          ‚ûï Yeni M√º≈üteri Ekle
        </a>
      </div>
    }
  </div>

  <!-- ‚úÖ Toast -->
  <div class="toast" id="toast">
    <div>
      <p class="t-title" id="tTitle">Bildirim</p>
      <p class="t-desc" id="tDesc">ƒ∞≈ülem tamamlandƒ±.</p>
    </div>
    <div class="x" id="tClose">‚úñ</div>
  </div>
</div>

@section Scripts{
<script>
(function(){
  // ===== Toast =====
  const toastEl = document.getElementById("toast");
  const tTitle  = document.getElementById("tTitle");
  const tDesc   = document.getElementById("tDesc");
  const tClose  = document.getElementById("tClose");

  function toast(title, desc){
    if(!toastEl) return;
    tTitle.textContent = title || "Bildirim";
    tDesc.textContent  = desc || "";
    toastEl.classList.add("show");
    clearTimeout(window.__t);
    window.__t = setTimeout(()=> toastEl.classList.remove("show"), 2600);
  }
  tClose?.addEventListener("click", ()=> toastEl?.classList.remove("show"));

  // ‚úÖ AntiForgery token
  const token = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]')?.value || "";

  // ===== Search + Filter =====
  const search = document.getElementById("TSearch");
  const chips = document.querySelectorAll(".t-chip");

  let currentFilter = "all";

  function apply(){
    const q = (search?.value || "").trim().toLowerCase();
    document.querySelectorAll(".t-card").forEach(c=>{
      const st = c.getAttribute("data-status") || "passive";
      const txt = c.getAttribute("data-text") || "";
      const okFilter = (currentFilter==="all") || (st===currentFilter);
      const okSearch = !q || txt.includes(q);
      c.style.display = (okFilter && okSearch) ? "" : "none";
    });
  }

  search?.addEventListener("input", apply);

  chips.forEach(ch=>{
    ch.addEventListener("click", ()=>{
      chips.forEach(x=>x.classList.remove("active"));
      ch.classList.add("active");
      currentFilter = ch.getAttribute("data-filter") || "all";
      apply();
    });
  });

  // ===== Read more / less (delegation) =====
  document.addEventListener("click", (e)=>{
    const btn = e.target.closest(".t-more");
    if(!btn) return;

    const id = btn.getAttribute("data-target");
    const p = document.getElementById(id);
    if(!p) return;

    const isClamped = p.classList.contains("t-clamp");
    if(isClamped){
      p.classList.remove("t-clamp");
      btn.textContent = "Daha az";
    }else{
      p.classList.add("t-clamp");
      btn.textContent = "Daha √ßox";
    }
  });

  // ===== Delete confirm (delegation) =====
  document.addEventListener("click", async (e)=>{
    const a = e.target.closest(".js-del");
    if(!a) return;

    const id = a.getAttribute("data-id");
    const name = a.getAttribute("data-name") || "Kayƒ±t";

    if (typeof Swal === "undefined") {
      if (confirm(name + " yorumu silinsin mi?")) {
        window.location.href = `/Testimonial/DeleteTestimonial/${id}`;
      }
      return;
    }

    const res = await Swal.fire({
      title: "Silinsin mi?",
      html: `<div style="opacity:.9"><b>${name}</b> yorumu silinecek.</div>`,
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Evet, sil",
      cancelButtonText: "Vazge√ß",
      confirmButtonColor: "#ef4444"
    });

    if(res.isConfirmed){
      window.location.href = `/Testimonial/DeleteTestimonial/${id}`;
    }
  });

  // ===== ‚úÖ Toggle Status (NO refresh) =====
  async function toggleStatus(btn){
    const url = btn.getAttribute("data-post");
    if(!url) return;

    btn.disabled = true;

    try{
      const res = await fetch(url, {
        method: "POST",
        credentials: "same-origin",
        headers: { "RequestVerificationToken": token }
      });

      const raw = await res.text();
      if(!res.ok) throw new Error(`HTTP ${res.status} -> ${raw}`);

      let data;
      try { data = JSON.parse(raw); }
      catch { throw new Error("JSON parse failed -> " + raw); }

      if(!data || data.success !== true)
        throw new Error(data?.message || "Operation failed");

      const card = btn.closest(".t-card");
      const isActive = data.status === true;

      // UI update
      btn.classList.toggle("active", isActive);
      btn.innerHTML = `<span class="dot"></span> ${isActive ? "Aktif" : "Pasif"}`;

      // filter data update
      card?.setAttribute("data-status", isActive ? "active" : "passive");

      toast("Durum g√ºncellendi", data.message || (isActive ? "Aktif edildi." : "Pasife alƒ±ndƒ±."));
      apply();

    }catch(err){
      console.error("TOGGLE ERROR:", err);
      toast("Hata", err.message || "Durum g√ºncellenemedi.");
    }finally{
      btn.disabled = false;
    }
  }

  document.addEventListener("click", (e)=>{
    const btn = e.target.closest(".js-toggle");
    if(!btn) return;
    toggleStatus(btn);
  });

  // init
  apply();
})();
</script>
}
