@using YummyUI.DTOs.GroupOrganizationDTO
@using Microsoft.AspNetCore.Mvc.Rendering
@model UpdateGroupOrganizationDto

@{
    Layout ="_AdminLayout";
}

@section Styles {
<style>
  :root{
    --bg0:#050814; --bg1:#070b1f;
    --glass: rgba(255,255,255,.08);
    --stroke: rgba(255,255,255,.14);
    --txt: rgba(255,255,255,.92);
    --muted: rgba(255,255,255,.65);
    --muted2: rgba(255,255,255,.45);
    --shadow: 0 18px 60px rgba(0,0,0,.45);
    --radius: 22px;
    --primary:#ffb020;
    --danger:#ff4d6d;
    --ok:#32d583;
  }

  .go-page{
    min-height: calc(100vh - 60px);
    padding: 24px 22px 34px;
    color: var(--txt);
    background:
      radial-gradient(1200px 700px at 12% 18%, rgba(255,176,32,.18), transparent 55%),
      radial-gradient(900px 600px at 85% 20%, rgba(60,130,255,.20), transparent 60%),
      radial-gradient(900px 600px at 70% 85%, rgba(168,85,247,.22), transparent 55%),
      linear-gradient(180deg, var(--bg0), var(--bg1));
    position: relative;
    overflow: hidden;
    border-radius: 22px;
  }
  .go-grid-overlay{
    position:absolute; inset:0;
    background-image:
      linear-gradient(to right, rgba(255,255,255,.06) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255,255,255,.06) 1px, transparent 1px);
    background-size: 42px 42px;
    opacity: .18;
    pointer-events:none;
    mask-image: radial-gradient(circle at 40% 20%, black 30%, transparent 70%);
  }
  .go-orb{ position:absolute; border-radius: 999px; opacity:.35; pointer-events:none; }
  .go-orb.o1{ width:320px; height:320px; left:-120px; top:140px;
    background: radial-gradient(circle at 30% 30%, rgba(255,176,32,.55), rgba(255,176,32,.12), transparent 70%); }
  .go-orb.o2{ width:420px; height:420px; right:-160px; top:60px;
    background: radial-gradient(circle at 30% 30%, rgba(59,130,246,.55), rgba(59,130,246,.12), transparent 70%); }
  .go-orb.o3{ width:520px; height:520px; right:120px; bottom:-260px;
    background: radial-gradient(circle at 30% 30%, rgba(168,85,247,.55), rgba(168,85,247,.14), transparent 70%); }

  .go-header{
    position: relative;
    display:flex; justify-content:space-between; align-items:flex-start;
    gap: 14px; margin-bottom: 18px;
  }
  .go-title{ margin:0 0 6px; font-size: 28px; font-weight: 900; letter-spacing:.2px; }
  .go-sub{ margin:0; color: var(--muted); font-size: 13.5px; }
  .go-pill{
    display:inline-flex; align-items:center; gap:10px;
    padding: 10px 14px; border-radius: 999px;
    background: rgba(255,255,255,.08);
    border: 1px solid rgba(255,255,255,.14);
    box-shadow: 0 10px 30px rgba(0,0,0,.35);
    color: var(--muted); font-size: 12.5px; white-space:nowrap;
  }

  .go-layout{
    position: relative;
    display:grid;
    grid-template-columns: 1.05fr .95fr;
    gap: 18px;
  }
  @@media (max-width: 1100px){ .go-layout{ grid-template-columns: 1fr; } }

  .go-card{
    background: var(--glass);
    border: 1px solid var(--stroke);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    overflow: hidden;
  }
  .go-card-head{
    padding: 16px 18px;
    display:flex; align-items:center; justify-content:space-between;
    border-bottom: 1px solid rgba(255,255,255,.10);
    background: linear-gradient(180deg, rgba(255,255,255,.06), transparent);
  }
  .go-card-title{
    margin:0;
    font-size: 14px;
    letter-spacing: .3px;
    text-transform: uppercase;
    color: rgba(255,255,255,.85);
    font-weight: 900;
  }
  .go-body{ padding: 18px; }

  .go-btn{
    border: 1px solid rgba(255,255,255,.16);
    background: rgba(255,255,255,.08);
    color: rgba(255,255,255,.88);
    border-radius: 12px;
    padding: 10px 12px;
    font-weight: 900;
    font-size: 13px;
    cursor:pointer;
    transition: .15s ease;
    user-select:none;
  }
  .go-btn:hover{ transform: translateY(-1px); border-color: rgba(255,255,255,.24); }
  .go-btn.primary{
    background: linear-gradient(180deg, rgba(255,176,32,.95), rgba(255,176,32,.75));
    color: rgba(0,0,0,.82);
    border-color: rgba(255,176,32,.60);
  }
  .go-btn.danger{
    background: linear-gradient(180deg, rgba(255,77,109,.95), rgba(255,77,109,.70));
    color: rgba(0,0,0,.82);
    border-color: rgba(255,77,109,.60);
  }

  .go-val{ color:#ff9aa9; margin: 0 0 10px 0; font-weight: 800; font-size: 13px; }

  .go-row{ display:grid; grid-template-columns: 1fr 1fr; gap: 12px; }
  @@media (max-width: 600px){ .go-row{ grid-template-columns: 1fr; } }

  .go-field{ margin-bottom: 12px; }
  .go-label{ display:flex; align-items:center; justify-content:space-between; gap: 10px; margin-bottom: 7px; }
  .go-label label{ margin:0; font-weight: 900; font-size: 12.5px; color: rgba(255,255,255,.82); }
  .go-hint{ color: var(--muted2); font-size: 12px; font-weight: 800; }

  .go-input{
    width: 100%;
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(0,0,0,.18);
    color: rgba(255,255,255,.90);
    padding: 12px 12px;
    outline: none;
    transition: .15s ease;
  }
  .go-input:focus{
    border-color: rgba(255,176,32,.55);
    box-shadow: 0 0 0 4px rgba(255,176,32,.12);
  }

  /* Priority pills */
  .pill-row{ display:flex; gap:10px; flex-wrap:wrap; }
  .pill{
    padding: 10px 12px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    color: rgba(255,255,255,.80);
    font-weight: 950;
    cursor:pointer;
    transition:.14s ease;
    user-select:none;
  }
  .pill:hover{ transform: translateY(-1px); border-color: rgba(255,255,255,.24); }
  .pill.active{
    border-color: rgba(255,176,32,.55);
    box-shadow: 0 0 0 4px rgba(255,176,32,.12);
    color: rgba(255,255,255,.92);
  }

  /* Organization cards */
  .org-grid{
    display:grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 10px;
  }
  @@media (max-width: 1300px){ .org-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); } }
  @@media (max-width: 520px){ .org-grid{ grid-template-columns: 1fr; } }

  .org-card{
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    padding: 12px;
    cursor:pointer;
    transition: .14s ease;
    user-select:none;
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap: 10px;
    min-height: 60px;
  }
  .org-card:hover{ transform: translateY(-1px); border-color: rgba(255,255,255,.24); }
  .org-card.selected{
    border-color: rgba(255,176,32,.55);
    box-shadow: 0 0 0 4px rgba(255,176,32,.12);
  }
  .org-name{
    font-weight: 950;
    margin:0;
    font-size: 13.5px;
    white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
  }
  .org-tag{
    padding: 7px 10px;
    border-radius: 999px;
    font-weight: 950;
    font-size: 12px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(0,0,0,.16);
    color: rgba(255,255,255,.72);
    flex: 0 0 auto;
  }

  /* Status toggle */
  .go-toggle{
    display:flex; align-items:center; gap: 10px;
    padding: 10px 12px;
    border-radius: 14px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(0,0,0,.16);
  }
  .go-switch{
    width: 44px; height: 26px;
    border-radius: 999px;
    background: rgba(255,255,255,.14);
    border: 1px solid rgba(255,255,255,.16);
    position: relative;
    cursor: pointer;
    flex: 0 0 auto;
  }
  .go-switch::after{
    content:"";
    width: 20px; height: 20px;
    border-radius: 999px;
    position:absolute; top: 2px; left: 2px;
    background: rgba(255,255,255,.85);
    transition: .18s ease;
  }
  .go-switch.on{ background: rgba(50,213,131,.25); border-color: rgba(50,213,131,.35); }
  .go-switch.on::after{ left: 22px; background: rgba(255,255,255,.95); }

  .state{
    margin-left:auto;
    padding: 7px 10px;
    border-radius: 999px;
    font-weight: 950;
    font-size: 12px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    color: rgba(255,255,255,.80);
  }
  .state.ok{ background: rgba(50,213,131,.18); border-color: rgba(50,213,131,.30); color: rgba(214,255,233,.95); }

  /* Chef picker */
  .chef-grid{
    display:grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 10px;
  }
  @@media (max-width: 1300px){ .chef-grid{ grid-template-columns: repeat(2, minmax(0, 1fr)); } }
  .chef-card{
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    padding: 12px;
    cursor: pointer;
    transition: .14s ease;
    user-select:none;
    display:flex;
    gap: 10px;
    align-items:center;
    min-height: 70px;
  }
  .chef-card:hover{ transform: translateY(-1px); border-color: rgba(255,255,255,.24); }
  .chef-card.selected{
    border-color: rgba(255,176,32,.55);
    box-shadow: 0 0 0 4px rgba(255,176,32,.12);
  }
  .chef-avatar{
    width: 36px; height: 36px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,.22);
    background: radial-gradient(circle at 30% 30%, rgba(255,255,255,.28), rgba(255,255,255,.08), rgba(0,0,0,.08));
    flex: 0 0 auto;
  }
  .chef-name{
    font-weight: 950;
    font-size: 13px;
    margin:0;
    white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
  }
  .chef-sub{
    margin:0;
    font-size: 12px;
    color: var(--muted2);
    font-weight: 800;
  }

  /* Preview */
  .go-sticky{ position: sticky; top: 18px; }
  .preview-hero{ display:flex; justify-content:space-between; gap:12px; align-items:flex-start; }
  .preview-title{ margin:0; font-size: 18px; font-weight: 950; }
  .preview-badge{
    padding: 8px 12px;
    border-radius: 999px;
    font-weight: 950;
    font-size: 12px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    color: rgba(255,255,255,.80);
    white-space:nowrap;
  }
  .preview-badge.ok{ background: rgba(50,213,131,.18); border-color: rgba(50,213,131,.30); color: rgba(214,255,233,.95); }
  .preview-grid{
    margin-top: 14px;
    display:grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
  }
  .preview-item{
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(0,0,0,.16);
    padding: 12px;
  }
  .preview-k{ color: var(--muted2); font-weight: 900; font-size: 12px; margin:0 0 6px; }
  .preview-v{ margin:0; font-weight: 950; font-size: 14px; color: rgba(255,255,255,.92); white-space:nowrap; overflow:hidden; text-overflow:ellipsis; }
  .preview-wide{ grid-column: 1 / -1; }

  .stack{ display:flex; align-items:center; }
  .dot{
    width: 30px; height: 30px; border-radius: 999px;
    border: 2px solid rgba(0,0,0,.35);
    background: radial-gradient(circle at 30% 30%, rgba(255,255,255,.35), rgba(255,255,255,.10), rgba(0,0,0,.12));
    margin-left: -10px;
  }
  .dot:first-child{ margin-left:0; }

  .chip{
    padding: 7px 10px;
    border-radius: 999px;
    font-weight: 950;
    font-size: 12px;
    border: 1px solid rgba(255,255,255,.14);
    background: rgba(255,255,255,.06);
    color: rgba(255,255,255,.78);
    white-space:nowrap;
  }

  .go-foot{ display:flex; gap: 10px; justify-content:space-between; margin-top: 14px; }
</style>
}


<div class="go-page">
  <div class="go-grid-overlay"></div>
  <div class="go-orb o1"></div>
  <div class="go-orb o2"></div>
  <div class="go-orb o3"></div>

  <div class="go-header">
    <div>
      <h1 class="go-title">Group Organization • Update</h1>
      <p class="go-sub">Dropdown yok. Organizasyon kart seçimi, öncelik pill seçimi.</p>
    </div>
    <div class="go-pill">Admin • Update</div>
  </div>

  <div class="go-layout">
    <div class="go-card">
      <div class="go-card-head">
        <h3 class="go-card-title">Form</h3>
        <div style="display:flex; gap:10px;">
          <button type="button" class="go-btn" id="btnClear">Önizlemeyi Temizle</button>
        </div>
      </div>

      <div class="go-body">
        <form asp-action="UpdateGroupOrganization" method="post" id="goForm">
          @Html.AntiForgeryToken()
          <div asp-validation-summary="All" class="go-val"></div>

          <input asp-for="GroupOrganizationId" type="hidden" />

          <div class="go-field">
            <div class="go-label">
              <label>Organizasyon</label>
              <span class="go-hint" id="orgHint">Seçilmedi</span>
            </div>

            <div class="org-grid" id="orgGrid">
                @foreach (var o in (ViewBag.Organizations as IEnumerable<SelectListItem>) ?? Enumerable.Empty<SelectListItem>())

              {
                  var selected = (Model?.OrganizationId.ToString() == o.Value);

                  <div class="org-card @(selected ? "selected" : "")"
                       data-org-id="@o.Value"
                       data-org-name="@o.Text"
                       tabindex="0">
                    <p class="org-name">@o.Text</p>
                    <span class="org-tag">Seç</span>
                  </div>
              }
            </div>

            <input asp-for="OrganizationId" type="hidden" id="orgHidden" />
            <span asp-validation-for="OrganizationId" class="go-val"></span>
          </div>

          <div class="go-field">
            <div class="go-label">
              <label>Öncelik</label>
              <span class="go-hint" id="prioHint">Seçilmedi</span>
            </div>

            <div class="pill-row" id="prioRow">
              <div class="pill" data-prio="1" tabindex="0">Normal</div>
              <div class="pill" data-prio="2" tabindex="0">Orta</div>
              <div class="pill" data-prio="3" tabindex="0">Öncelikli</div>
            </div>

            <input asp-for="GroupPriority" type="hidden" id="prioHidden" />
            <span asp-validation-for="GroupPriority" class="go-val"></span>
          </div>

          <div class="go-row">
            <div class="go-field">
              <div class="go-label">
                <label asp-for="ParticipantCount">Katılımcı</label>
                <span class="go-hint">0 - 50</span>
              </div>
              <input asp-for="ParticipantCount" type="number" min="0" max="50" class="go-input" id="partInput" />
              <span asp-validation-for="ParticipantCount" class="go-val"></span>
            </div>

            <div class="go-field">
              <div class="go-label">
                <label>Kapasite</label>
                <span class="go-hint">Sabit 50</span>
              </div>
              <input class="go-input" value="50" disabled />
              <input asp-for="PersonCount" type="hidden" value="50" id="personCountHidden" />
            </div>
          </div>

          <div class="go-row">
            <div class="go-field">
              <div class="go-label">
                <label asp-for="Date">Tarih</label>
                <span class="go-hint">Seç</span>
              </div>
              <input asp-for="Date" type="date" class="go-input" id="dateInput" />
              <span asp-validation-for="Date" class="go-val"></span>
            </div>

            <div class="go-field">
              <div class="go-label">
                <label asp-for="Time">Saat</label>
                <span class="go-hint">Seç</span>
              </div>
              <input asp-for="Time" type="time" class="go-input" id="timeInput" />
              <span asp-validation-for="Time" class="go-val"></span>
            </div>
          </div>


          <div class="go-field">
            <div class="go-label">
              <label>Görevli Şefler</label>
              <span class="go-hint"><span id="chefCount">0</span> seçildi</span>
            </div>

            <div class="chef-grid" id="chefGrid">
              @foreach (var c in (ViewBag.Chefs as IEnumerable<SelectListItem>) ?? Enumerable.Empty<SelectListItem>())

              {
                  var isChecked = Model?.ChefIds?.Contains(int.Parse(c.Value)) == true;

                  <div class="chef-card @(isChecked ? "selected" : "")"
                       data-chef-id="@c.Value"
                       data-chef-name="@c.Text"
                       tabindex="0">
                    <div class="chef-avatar"></div>
                    <div>
                      <p class="chef-name">@c.Text</p>
                      <p class="chef-sub">Tap seç / çıxar</p>
                    </div>
                  </div>

                  <input type="checkbox"
                         class="chef-checkbox"
                         name="ChefIds"
                         value="@c.Value"
                         style="display:none"
                         @(isChecked ? "checked" : "") />
              }
            </div>

            <span asp-validation-for="ChefIds" class="go-val"></span>
          </div>

          <div class="go-foot">
            <button type="submit" class="go-btn primary">Güncelle</button>
            <a class="go-btn" href="javascript:history.back()">Geri</a>
          </div>
        </form>
      </div>
    </div>

    <div class="go-card go-sticky">
      <div class="go-card-head">
        <h3 class="go-card-title">Canlı Önizleme</h3>
        <span class="chip" id="chipPriority">Öncelik: -</span>
      </div>

      <div class="go-body">
        <div class="preview-hero">
          <div>
            <p class="preview-title" id="pvOrg">Organizasyon: Seçilmedi</p>
            <p class="go-sub" style="margin-top:6px">Katılım / Tarih / Saat / Şefler</p>
          </div>
          <span class="preview-badge ok" id="pvStatus" style="display:none"></span>
        </div>

        <div class="preview-grid">
          <div class="preview-item">
            <p class="preview-k">Katılımcı</p>
            <p class="preview-v" id="pvParticipants">0 / 50</p>
          </div>
          <div class="preview-item">
            <p class="preview-k">Öncelik</p>
            <p class="preview-v" id="pvPriority">-</p>
          </div>
          <div class="preview-item">
            <p class="preview-k">Tarih</p>
            <p class="preview-v" id="pvDate">-</p>
          </div>
          <div class="preview-item">
            <p class="preview-k">Saat</p>
            <p class="preview-v" id="pvTime">-</p>
          </div>

          <div class="preview-item preview-wide">
            <p class="preview-k">Seçilen Şefler</p>
            <p class="preview-v" id="pvChefNames">Henüz seçilmedi</p>
          </div>
        </div>

        <div style="margin-top:12px; display:flex; align-items:center; justify-content:space-between; gap:10px;">
          <div class="stack" id="pvChefStack"></div>
          <span class="chip" id="pvChefCountChip">0 seçildi</span>
        </div>

        <div class="go-foot" style="margin-top:16px;">
          <button type="button" class="go-btn danger" id="btnClear2">Önizlemeyi Temizle</button>
          <span class="go-pill" style="padding:8px 12px">Live</span>
        </div>
      </div>
    </div>

  </div>
</div>

@section Scripts {
<script>
(function(){
  const el = (id) => document.getElementById(id);

  // Org
  const orgGrid = el("orgGrid");
  const orgHidden = el("orgHidden");
  const orgHint = el("orgHint");

  // Priority
  const prioRow = el("prioRow");
  const prioHidden = el("prioHidden");
  const prioHint = el("prioHint");

  // Inputs
  const partInput = el("partInput");
  const personHidden = el("personCountHidden");
  const dateInput = el("dateInput");
  const timeInput = el("timeInput");

  // Chefs
  const chefGrid = el("chefGrid");
  const chefCount = el("chefCount");
  const chefCheckboxes = Array.from(document.querySelectorAll(".chef-checkbox"));

  // Preview
  const pvOrg = el("pvOrg");
  const pvParticipants = el("pvParticipants");
  const pvPriority = el("pvPriority");
  const pvDate = el("pvDate");
  const pvTime = el("pvTime");
  const pvChefNames = el("pvChefNames");
  const pvChefStack = el("pvChefStack");
  const pvChefCountChip = el("pvChefCountChip");
  const chipPriority = el("chipPriority");

  const btnClear = el("btnClear");
  const btnClear2 = el("btnClear2");

  function prioName(v){
    if(v === "1") return "Normal";
    if(v === "2") return "Orta";
    if(v === "3") return "Öncelikli";
    return "-";
  }

  function fmtDate(v){
    if(!v) return "-";
    const p = v.split("-");
    if(p.length !== 3) return v;
    return `${p[2]}.${p[1]}.${p[0]}`;
  }

  function getSelectedChefs(){
    const cards = Array.from(chefGrid.querySelectorAll(".chef-card"));
    const selected = [];
    cards.forEach(card => {
      if(card.classList.contains("selected")){
        selected.push({
          id: card.getAttribute("data-chef-id"),
          name: card.getAttribute("data-chef-name")
        });
      }
    });
    return selected;
  }

  function updatePreview(){
    // Org
    const orgCard = orgGrid.querySelector(".org-card.selected");
    const orgName = orgCard ? orgCard.getAttribute("data-org-name") : null;
    pvOrg.textContent = `Organizasyon: ${orgName ?? "Seçilmedi"}`;
    orgHint.textContent = orgName ?? "Seçilmedi";

    // Participants
    const max = personHidden?.value || "50";
    const pc = partInput?.value || "0";
    pvParticipants.textContent = `${pc} / ${max}`;

    // Priority
    const pr = prioHidden?.value || "";
    const prText = prioName(pr);
    pvPriority.textContent = prText;
    chipPriority.textContent = `Öncelik: ${prText}`;
    prioHint.textContent = prText === "-" ? "Seçilmedi" : prText;

    // Date/Time
    pvDate.textContent = fmtDate(dateInput?.value || "");
    pvTime.textContent = (timeInput?.value || "-");

    // Chefs
    const selected = getSelectedChefs();
    chefCount.textContent = selected.length.toString();
    pvChefCountChip.textContent = `${selected.length} seçildi`;

    pvChefNames.textContent = selected.length
      ? selected.map(x => x.name).join(", ")
      : "Henüz seçilmedi";

    pvChefStack.innerHTML = "";
    selected.slice(0, 6).forEach(_ => {
      const d = document.createElement("div");
      d.className = "dot";
      pvChefStack.appendChild(d);
    });
  }

  // Organization select
  function selectOrg(card){
    orgGrid.querySelectorAll(".org-card").forEach(x => x.classList.remove("selected"));
    card.classList.add("selected");
    orgHidden.value = card.getAttribute("data-org-id") || "";
    updatePreview();
  }

  orgGrid?.addEventListener("click", (e) => {
    const card = e.target.closest(".org-card");
    if(!card) return;
    selectOrg(card);
  });

  orgGrid?.addEventListener("keydown", (e) => {
    if(e.key !== "Enter" && e.key !== " ") return;
    const card = e.target.closest(".org-card");
    if(!card) return;
    e.preventDefault();
    selectOrg(card);
  });

  // Priority select
  function selectPrio(pill){
    prioRow.querySelectorAll(".pill").forEach(x => x.classList.remove("active"));
    pill.classList.add("active");
    prioHidden.value = pill.getAttribute("data-prio") || "";
    updatePreview();
  }

  prioRow?.addEventListener("click", (e) => {
    const pill = e.target.closest(".pill");
    if(!pill) return;
    selectPrio(pill);
  });

  prioRow?.addEventListener("keydown", (e) => {
    if(e.key !== "Enter" && e.key !== " ") return;
    const pill = e.target.closest(".pill");
    if(!pill) return;
    e.preventDefault();
    selectPrio(pill);
  });

  // Other inputs
  partInput?.addEventListener("input", updatePreview);
  dateInput?.addEventListener("change", updatePreview);
  timeInput?.addEventListener("change", updatePreview);

  // Chefs
  function toggleChef(card){
    const id = card.getAttribute("data-chef-id");
    card.classList.toggle("selected");
    const cb = chefCheckboxes.find(x => x.value === id);
    if(cb) cb.checked = card.classList.contains("selected");
    updatePreview();
  }

  chefGrid?.addEventListener("click", (e) => {
    const card = e.target.closest(".chef-card");
    if(!card) return;
    toggleChef(card);
  });

  chefGrid?.addEventListener("keydown", (e) => {
    if(e.key !== "Enter" && e.key !== " ") return;
    const card = e.target.closest(".chef-card");
    if(!card) return;
    e.preventDefault();
    toggleChef(card);
  });

  // Clear
  function clearAll(){
    // org
    orgGrid.querySelectorAll(".org-card").forEach(x => x.classList.remove("selected"));
    orgHidden.value = "";

    // prio
    prioRow.querySelectorAll(".pill").forEach(x => x.classList.remove("active"));
    prioHidden.value = "";

    // inputs
    if(partInput) partInput.value = "0";
    if(dateInput) dateInput.value = "";
    if(timeInput) timeInput.value = "";

    // chefs
    chefGrid.querySelectorAll(".chef-card").forEach(c => c.classList.remove("selected"));
    chefCheckboxes.forEach(cb => cb.checked = false);

    updatePreview();
  }

  btnClear?.addEventListener("click", clearAll);
  btnClear2?.addEventListener("click", clearAll);

  // Init from hidden values (Model bound)
  function initFromHidden(){
    // org
    if(orgHidden?.value){
      const card = orgGrid.querySelector(`.org-card[data-org-id="${orgHidden.value}"]`);
      if(card) selectOrg(card);
    }
    // prio
    if(prioHidden?.value){
      const pill = prioRow.querySelector(`.pill[data-prio="${prioHidden.value}"]`);
      if(pill) selectPrio(pill);
    }
  }

  initFromHidden();
  updatePreview();
})();
</script>
