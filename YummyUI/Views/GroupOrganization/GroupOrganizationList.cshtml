<div class="ai-go">
  <div class="glass">

    <!-- KPI -->
    <div class="kpis" id="kpiRow">
      <div class="kpi active" data-prio="all"><div><div class="label">Hepsi</div></div><div class="val">@cntAll</div></div>
      <div class="kpi" data-prio="1"><div><div class="label">Low</div></div><div class="val">@cntLow</div></div>
      <div class="kpi" data-prio="2"><div><div class="label">Average</div></div><div class="val">@cntAvg</div></div>
      <div class="kpi" data-prio="3"><div><div class="label">High</div></div><div class="val">@cntHigh</div></div>
    </div>

    <!-- Toolbar -->
    <div class="toolbar">
      <div class="row">
        <div class="search">
          <span class="hint">üîé</span>
          <input id="q" type="text" placeholder="Organization, chef, tarih, saat..." autocomplete="off" />
        </div>

        <div class="tabs" id="prioTabs">
          <button type="button" class="tab active" data-prio="all">Hepsi <span class="count-pill">@cntAll</span></button>
          <button type="button" class="tab" data-prio="1">Low <span class="count-pill">@cntLow</span></button>
          <button type="button" class="tab" data-prio="2">Average <span class="count-pill">@cntAvg</span></button>
          <button type="button" class="tab" data-prio="3">High <span class="count-pill">@cntHigh</span></button>
        </div>
      </div>
    </div>

    <div class="listWrap">
      @if (!grouped.Any())
      {
        <div class="muted-empty">Bo≈ü.</div>
      }
      else
      {
        <div id="list">
          @foreach (var g in grouped)
          {
            var h = g.Header;

            var prioName  = PName(g.Priority);
            var prioClass = g.Priority == 1 ? "low" : g.Priority == 2 ? "avg" : "high";

            var chefText = string.Join(", ", (g.Chefs ?? new List<ResultGroupOrganizationChefDto>())
                .Select(x => (x?.ChefName ?? "").Trim()).Where(x => x != ""));

            // orgTitle: name bo≈üsa fallback (SENDE organizationId yoksa bunu b√∂yle bƒ±rak)
            var orgNameRaw = (h.OrganizationName ?? "").Trim();
            var orgTitle = string.IsNullOrWhiteSpace(orgNameRaw) ? $"Org{h.GroupOrganizationId}" : orgNameRaw;

            var searchText = $"{orgTitle} {h.GroupOrganizationId} {prioName} {h.ParticipationRate} {h.Date} {h.Time} {chefText}"
              .ToLowerInvariant();

            var chefs = g.Chefs ?? new List<ResultGroupOrganizationChefDto>();
            var top3  = chefs.Take(3).ToList();
            var extra = Math.Max(0, chefs.Count - 3);

            var rate = h.ParticipationRate;
            if (rate < 0) rate = 0;
            if (rate > 100) rate = 100;

            <div class="rowCard item" data-prio="@g.Priority" data-search="@searchText">
              <!-- Org -->
              <div class="orgBlock">
                <div class="orgName">@orgTitle</div>
                <div class="orgMeta">
                  <span class="metaPill">ID: @h.GroupOrganizationId</span>
                  <span class="metaPill">@FormatDate(h.Date)</span>
                  <span class="metaPill">@FormatTime(h.Time)</span>
                </div>
              </div>

              <!-- Chefs -->
              <div>
                <div class="chefStack">
                  @foreach (var c in top3)
                  {
                    var chefName = (c?.ChefName ?? "").Trim();
                    var initial  = string.IsNullOrWhiteSpace(chefName) ? "?" : chefName.Substring(0, 1).ToUpperInvariant();

                    var img = (c?.ImageFile ?? "").Trim();
                    var imgSrc =
                        string.IsNullOrWhiteSpace(img) ? "" :
                        img.StartsWith("http", StringComparison.OrdinalIgnoreCase) ? img :
                        apiBase.TrimEnd('/') + "/" + img.TrimStart('/');

                    if (!string.IsNullOrWhiteSpace(imgSrc))
                    {
                      <div class="chefAv" data-name="@chefName">
                        <img src="@imgSrc" alt="@chefName" />
                      </div>
                    }
                    else
                    {
                      <div class="chefAv fallback" data-name="@chefName">@initial</div>
                    }
                  }

                  @if (extra > 0)
                  {
                    <div class="chefMore">+@extra</div>
                  }
                </div>
              </div>

              <!-- Rate -->
              <div class="rateWrap">
                <div class="rateTop"><span>@rate%</span></div>
                <div class="bar"><span style="width:@rate%"></span></div>
              </div>

              <!-- Priority -->
              <div>
                <span class="prio @prioClass">@prioName</span>
              </div>

              <!-- Actions -->
              <div class="actions">
                <!-- DETAY: modal -->
                <button type="button"
                        class="btnMini primary js-detail"
                        data-id="@h.GroupOrganizationId"
                        data-org="@orgTitle"
                        data-date="@FormatDate(h.Date)"
                        data-time="@FormatTime(h.Time)"
                        data-rate="@rate"
                        data-prio="@prioName"
                        data-prioclass="@prioClass"
                        data-chefs="@chefText">
                  Detay
                </button>

                <a class="btnMini"
                   asp-controller="GroupOrganization"
                   asp-action="Update"
                   asp-route-id="@h.GroupOrganizationId">D√ºzenle</a>

                <button type="button"
                        class="btnMini danger js-delete"
                        data-id="@h.GroupOrganizationId"
                        data-name="@orgTitle">Sil</button>
              </div>
            </div>
          }
        </div>
      }
    </div>

  </div>
</div>

