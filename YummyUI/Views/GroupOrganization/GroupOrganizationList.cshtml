<script>
(() => {
  const q = document.getElementById("q");
  const list = document.getElementById("list");
  const tabs = document.getElementById("prioTabs");
  const kpiRow = document.getElementById("kpiRow");

  let activePrio = "all";

  function applyFilters() {
    if (!list) return;
    const needle = (q?.value || "").trim().toLowerCase();
    const items = Array.from(list.querySelectorAll(".item"));

    items.forEach(it => {
      const prio = it.getAttribute("data-prio");
      const hay = (it.getAttribute("data-search") || "");
      const okPrio = (activePrio === "all") || (prio === activePrio);
      const okSearch = !needle || hay.includes(needle);
      it.style.display = (okPrio && okSearch) ? "" : "none";
    });
  }

  function setActivePrio(prio){
    activePrio = prio || "all";
    Array.from(tabs?.querySelectorAll(".tab") || []).forEach(x => {
      x.classList.toggle("active", (x.getAttribute("data-prio") || "all") === activePrio);
    });
    Array.from(kpiRow?.querySelectorAll(".kpi") || []).forEach(x => {
      x.classList.toggle("active", (x.getAttribute("data-prio") || "all") === activePrio);
    });
    applyFilters();
  }

  q?.addEventListener("input", applyFilters);

  tabs?.addEventListener("click", (e) => {
    const btn = e.target.closest(".tab");
    if (!btn) return;
    setActivePrio(btn.getAttribute("data-prio") || "all");
  });

  kpiRow?.addEventListener("click", (e) => {
    const box = e.target.closest(".kpi");
    if (!box) return;
    setActivePrio(box.getAttribute("data-prio") || "all");
  });

  // ===== MODAL =====
  const modal = document.getElementById("goModal");
  const closeBtn = document.getElementById("goModalClose");

  const m_gid = document.getElementById("m_gid");
  const m_org = document.getElementById("m_org");
  const m_date = document.getElementById("m_date");
  const m_time = document.getElementById("m_time");
  const m_rate = document.getElementById("m_rate");
  const m_chefs = document.getElementById("m_chefs");
  const m_prioChip = document.getElementById("m_prioChip");

  const m_rateTop = document.getElementById("m_rateTop");
  const m_rateBar = document.getElementById("m_rateBar");

  const m_detail = document.getElementById("m_detail");
  const m_update = document.getElementById("m_update");

  function openModal(){
    modal.classList.add("is-open");
    modal.setAttribute("aria-hidden", "false");
    document.body.style.overflow = "hidden";
  }
  function closeModal(){
    modal.classList.remove("is-open");
    modal.setAttribute("aria-hidden", "true");
    document.body.style.overflow = "";
  }

  closeBtn?.addEventListener("click", closeModal);
  modal?.addEventListener("click", (e) => {
    if (e.target?.dataset?.close) closeModal();
  });
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && modal.classList.contains("is-open")) closeModal();
  });

  document.addEventListener("click", (e) => {
    const btn = e.target.closest(".js-detail");
    if (!btn) return;

    const id = btn.getAttribute("data-id") || "-";
    const org = btn.getAttribute("data-org") || "-";
    const date = btn.getAttribute("data-date") || "-";
    const time = btn.getAttribute("data-time") || "-";
    const rate = btn.getAttribute("data-rate") || "0";
    const prio = btn.getAttribute("data-prio") || "-";
    const prioClass = btn.getAttribute("data-prioclass") || "low";
    const chefs = btn.getAttribute("data-chefs") || "-";

    m_gid.textContent = id;
    m_org.textContent = org;
    m_date.textContent = date;
    m_time.textContent = time;
    m_rate.textContent = `${rate}%`;
    m_chefs.textContent = chefs || "-";

    // prio chip class reset
    m_prioChip.className = "prio";
    m_prioChip.classList.add(prioClass);
    m_prioChip.textContent = prio;

    // bar
    const n = Math.max(0, Math.min(100, parseInt(rate, 10) || 0));
    m_rateTop.textContent = `${n}%`;
    m_rateBar.style.width = `${n}%`;

    // links
    m_detail.href = `/GroupOrganization/Detail/${encodeURIComponent(id)}`;
    m_update.href = `/GroupOrganization/Update/${encodeURIComponent(id)}`;

    openModal();
  });

  // ===== Delete confirm (mevcut) =====
  document.addEventListener("click", async (e) => {
    const btn = e.target.closest(".js-delete");
    if (!btn) return;

    const id = btn.getAttribute("data-id");
    const name = btn.getAttribute("data-name") || "";
    if (!id) return;

    const deleteUrl = `/GroupOrganization/Delete/${encodeURIComponent(id)}`;

    if (typeof Swal === "undefined") {
      if (confirm(`Emin misin?\n${name} silinecek.`)) window.location.href = deleteUrl;
      return;
    }

    const result = await Swal.fire({
      title: "Emin misin?",
      text: `${name} silinecek!`,
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#ef4444",
      cancelButtonColor: "#6b7280",
      confirmButtonText: "Evet, sil",
      cancelButtonText: "Vazge√ß"
    });

    if (result.isConfirmed) window.location.href = deleteUrl;
  });

  setActivePrio("all");
})();
</script>
