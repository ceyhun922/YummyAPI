@using YummyUI.DTOs.GroupOrganizationChefDTO
@model List<ResultGroupOrganizationChefDto>

@{
    Layout = "_AdminLayout";
    var apiBase = "http://localhost:5289";

    var rows = Model ?? new List<ResultGroupOrganizationChefDto>();

    var grouped = rows
        .GroupBy(x => x.GroupOrganizationId)
        .Select(g => new
        {
            GroupOrganizationId = g.Key,
            Header = g.First(),
            Priority = g.First().GroupPriority,
            Chefs = g.OrderBy(x => x.ChefName).ToList()
        })
        .OrderByDescending(x => x.Priority)
        .ToList();

    int cntAll = grouped.Count;
    int cntLow = grouped.Count(x => x.Priority == 1);
    int cntAvg = grouped.Count(x => x.Priority == 2);
    int cntHigh = grouped.Count(x => x.Priority == 3);

    string PName(int p) => p == 1 ? "Low" : p == 2 ? "Average" : "High";
    string FormatDate(DateOnly d) => d.ToString("dd.MM.yyyy");
    string FormatTime(TimeOnly t) => t.ToString("HH:mm");
}

@section Styles {
<style>
:root{
  --bg0:#0b1026; --bg1:#0f1636; --bg2:#1b1347;
  --panel: rgba(14,20,48,.55); --panelSoft: rgba(14,20,48,.38);
  --stroke: rgba(255,255,255,.10); --strokeStrong: rgba(255,255,255,.18);
  --text: rgba(255,255,255,.94); --muted: rgba(255,255,255,.65); --muted2: rgba(255,255,255,.45);
  --brand1:#6f6ad8; --brand2:#8b5cf6;
  --warn1:#f6c34a; --warn2:#f2a51a;
  --danger1:#ef4444; --danger2:#dc2626;
}
*{ box-sizing:border-box; }
html, body{ background: var(--bg0); }

.ai-go{
  min-height:100%;
  padding: 1.8rem 2rem 2.6rem;
  position:relative; overflow:hidden;
  background:
    radial-gradient(1200px 600px at 20% 25%, rgba(111,106,216,.30), transparent 60%),
    radial-gradient(900px 500px at 80% 70%, rgba(56,189,248,.12), transparent 60%),
    linear-gradient(135deg, var(--bg1) 0%, var(--bg2) 38%, var(--bg0) 100%);
}
.ai-go > .glass{ max-width: 1400px; margin: 0 auto; }

.glass{
  background: var(--panel);
  border-radius: 28px;
  border: 1px solid var(--stroke);
  backdrop-filter: blur(16px);
  box-shadow: 0 40px 90px rgba(0,0,0,.45);
  overflow:hidden;
}

/* KPI */
.kpis{
  display:grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: .95rem;
  padding: 1.15rem 1.25rem 0;
}
.kpi{
  background: var(--panelSoft);
  border: 1px solid var(--stroke);
  border-radius: 18px;
  padding: .95rem 1.05rem;
  display:flex; align-items:center; justify-content:space-between;
  cursor:pointer; user-select:none;
  transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease;
}
.kpi:hover{ transform: translateY(-1px); border-color: var(--strokeStrong); }
.kpi.active{
  background: linear-gradient(135deg, rgba(111,106,216,.22), rgba(139,92,246,.16));
  border-color: var(--strokeStrong);
  box-shadow: 0 18px 55px rgba(111,106,216,.25);
}
.kpi .label{ color: var(--muted); font-weight: 850; }
.kpi .val{ color: var(--text); font-weight: 950; font-size: 1.35rem; }

/* toolbar */
.toolbar{
  margin-top: 1rem;
  padding: 1.05rem 1.25rem;
  border-top: 1px solid rgba(255,255,255,.06);
  border-bottom: 1px solid rgba(255,255,255,.08);
  background: linear-gradient(180deg, rgba(10,14,40,.35), rgba(10,14,40,.12));
}
.row{ display:flex; gap:.8rem; align-items:center; flex-wrap:wrap; }
.search{
  flex:1; min-width: 320px;
  display:flex; align-items:center; gap:.65rem;
  padding: .95rem 1.05rem;
  border-radius: 22px;
  background: rgba(10,14,40,.45);
  border: 1px solid var(--stroke);
}
.search .hint{ color: var(--muted2); font-weight: 900; }
.search input{
  width:100%; border:none; outline:none; background: transparent;
  color: var(--text); font-weight: 850;
}
.tabs{
  display:inline-flex; align-items:center; gap: .35rem;
  background: rgba(10,14,40,.45);
  border: 1px solid var(--stroke);
  border-radius: 999px;
  padding: .28rem;
}
.tab{
  border:none; background: transparent;
  color: var(--muted);
  font-weight: 900; font-size: .86rem;
  padding: .6rem .95rem; border-radius: 999px;
  cursor:pointer;
  transition: transform .12s ease, box-shadow .12s ease, background .12s ease;
  display:inline-flex; align-items:center; gap:.5rem;
}
.tab:hover{ transform: translateY(-1px); }
.tab.active{
  background: linear-gradient(135deg, var(--brand1), var(--brand2));
  color:#fff;
  box-shadow: 0 16px 45px rgba(111,106,216,.35);
}
.count-pill{
  padding: .18rem .55rem;
  border-radius: 999px;
  background: rgba(255,255,255,.10);
  border: 1px solid rgba(255,255,255,.14);
  font-weight: 950;
  font-size: .75rem;
}

/* list */
.listWrap{ padding: 1.1rem 1.25rem 1.35rem; }
.muted-empty{ padding: 1.8rem 1.1rem; color: var(--muted); font-weight: 850; }

/* row card */
.rowCard{
  display:grid;
  grid-template-columns: 1.6fr 1.05fr 1fr .85fr 1.1fr;
  gap: 1rem;
  align-items:center;
  padding: 1.05rem 1.05rem;
  margin-bottom: .8rem;
  background: rgba(255,255,255,.035);
  border: 1px solid var(--stroke);
  border-radius: 24px;
  box-shadow: 0 18px 55px rgba(0,0,0,.25);
}
.orgBlock{ min-width:0; }
.orgName{
  font-weight: 950; color: #fff; font-size: 1.05rem;
  white-space: nowrap; overflow:hidden; text-overflow: ellipsis;
}
.orgMeta{
  margin-top: .35rem;
  display:flex; flex-wrap:wrap; gap:.55rem;
  color: var(--muted);
  font-weight: 850; font-size: .84rem;
}
.metaPill{
  background: rgba(255,255,255,.05);
  border: 1px solid rgba(255,255,255,.10);
  padding: .28rem .55rem;
  border-radius: 999px;
}

/* chef stack */
.chefStack{ display:inline-flex; align-items:center; padding-left: 6px; isolation:isolate; }
.chefAv, .chefMore{
  width: 44px; height: 44px;
  border-radius: 999px;
  overflow:hidden;
  display:grid; place-items:center;
  margin-left: -12px;
  position: relative;
  border: 2px solid rgba(255,255,255,.85);
  box-shadow: 0 12px 30px rgba(0,0,0,.20);
  background: rgba(15,23,42,.55);
  transition: transform .16s ease, box-shadow .16s ease;
}
.chefAv:first-child{ margin-left:0; }
.chefAv img{ width:100%; height:100%; object-fit: cover; display:block; }
.chefAv.fallback{
  font-weight: 950; color: #111827;
  background: linear-gradient(135deg, var(--warn1), var(--warn2));
}
.chefMore{
  background: linear-gradient(135deg, var(--brand1), var(--brand2));
  color:#fff; font-weight: 950;
}
.chefAv:hover{
  transform: translateY(-6px) scale(1.12);
  z-index: 10;
  box-shadow: 0 26px 70px rgba(0,0,0,.55);
}
.chefAv::after{
  content: attr(data-name);
  position:absolute;
  bottom:-44px; left:50%;
  transform: translateX(-50%);
  background: rgba(10,14,40,.95);
  color:#fff;
  padding: .38rem .6rem;
  border-radius: 12px;
  font-weight: 900;
  font-size: .8rem;
  white-space: nowrap;
  border: 1px solid rgba(255,255,255,.10);
  box-shadow: 0 18px 55px rgba(0,0,0,.55);
  opacity:0; pointer-events:none;
  transition: opacity .14s ease;
}
.chefAv:hover::after{ opacity:1; }

/* rate */
.rateWrap{ display:flex; flex-direction:column; gap:.35rem; min-width: 160px; }
.rateTop{ display:flex; align-items:center; justify-content:space-between; }
.rateTop span{ color: rgba(255,255,255,.86); font-weight: 950; }
.bar{
  height: 10px; border-radius: 999px; overflow:hidden;
  background: rgba(255,255,255,.10);
  border: 1px solid var(--stroke);
}
.bar > span{
  display:block; height:100%;
  background: linear-gradient(135deg, var(--brand1), var(--brand2));
}

/* prio */
.prio{
  display:inline-flex; align-items:center; justify-content:center;
  min-width: 96px;
  padding: .44rem .9rem;
  border-radius: 999px;
  font-weight: 950;
  border: 1px solid rgba(255,255,255,.14);
}
.prio.low{ background: rgba(255,255,255,.08); color: var(--text); }
.prio.avg{ background: linear-gradient(135deg, var(--warn1), var(--warn2)); color:#1a1a1a; border-color: transparent; }
.prio.high{ background: linear-gradient(135deg, var(--danger1), var(--danger2)); color:#fff; border-color: transparent; }

/* actions */
.actions{ display:flex; justify-content:flex-end; gap:.55rem; flex-wrap:wrap; }
.btnMini{
  border:none; cursor:pointer; text-decoration:none;
  display:inline-flex; align-items:center; gap:.45rem;
  padding: .66rem .95rem;
  border-radius: 18px;
  font-weight: 950;
  background: rgba(255,255,255,.06);
  color:#fff;
  border: 1px solid rgba(255,255,255,.12);
  transition: transform .12s ease, box-shadow .12s ease;
}
.btnMini:hover{ transform: translateY(-1px); box-shadow: 0 16px 40px rgba(0,0,0,.25); }
.btnMini.primary{
  background: linear-gradient(135deg, rgba(111,106,216,.35), rgba(139,92,246,.35));
  border-color: var(--strokeStrong);
}
.btnMini.danger{
  background: linear-gradient(135deg, var(--danger1), var(--danger2));
  border:none;
}

