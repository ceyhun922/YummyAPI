@using YummyAPI.DTOs.AboutDTO
@model List<ResultAboutDto>
@{
    Layout ="_AdminLayout";
}

<div class="section">
    <div class="section-body">
        <div class="row">
            <div class="col md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımızda Alanı</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Altbaşlık</th>
                                        <td>Ekleme</td>
                                        <td>Ekleme</td>
                                        <td>Ekleme</td>
                                        <td>Foto</td>
                                        <td>Video Url</td>
                                        <th>Kategori Sil</th>
                                        <th>Kategori Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AboutTitle</td>
                                            <td>@item.AboutSubTitle</td>
                                            <td>@item.AboutTitleChecked1</td>
                                            <td>@item.AboutTitleChecked2</td>
                                            <td>@item.AboutTitleChecked3</td>
                                            <td></td>
                                            <td>
                                                <img src="@item.AboutImageUrl" width="80" alt="@item.AboutTitle"></td>
                                            

                                            <td><a asp-action="AboutDelete" asp-controller="About"
                                                    asp-route-id="@item.AboutId" class="btn btn-danger">Sil</a></td>
                                            <td><a asp-action="AboutUpdate" asp-controller="About"
                                                    asp-route-id="@item.AboutId" class="btn btn-warning">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (Model.Count == 1)
                            {
                                <button class="btn btn-warning" onclick="return false">
                                    <i data-feather="alert-triangle"></i> Mövcud
                                </button>
                            }
                            else
                            {
                                <a asp-action="CreateAbout" asp-controller="About" class="btn btn-info">Yeni Hakkımızda Alan
                                    Girişi</a>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>