@using YummyUI.DTOs.AboutDTO
@model GetAboutByIdDto
@{
    Layout="_AdminLayout";
}

<div class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan Alan</h4>
                    </div>
                    <div class="card-body w-25">
                        @using (Html.BeginForm("AboutUpdate", "About", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.AboutId)
                            <div class="form-group">
                                <label>Başlık</label>
                                @Html.TextBoxFor(x => x.AboutTitle, new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <label>Alt Başlık</label>
                                @Html.TextBoxFor(x => x.AboutSubTitle, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Hakkında</label>
                                @Html.TextAreaFor(x => x.AboutTitleChecked1, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Hakkında</label>
                                @Html.TextAreaFor(x => x.AboutTitleChecked2, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Hakkında</label>
                                @Html.TextAreaFor(x => x.AboutTitleChecked3, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.AboutImageUrl, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.AboutVideoUrl, new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-primary mt-4">Save</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>