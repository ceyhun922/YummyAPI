@model CreateCategoryDto
@{
    Layout = "_AdminLayout";
}


<div class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Kategori Listesi</h4>
                    </div>
                    <div class="card-body w-25">
                        @using (Html.BeginForm("CreateCategory", "Category", FormMethod.Post))
                        {
                            <div class="form-group">
                                <label>Category Name</label>
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                            </div>
                           
                            <div class="form-group mt-3">

                                <label class="custom-switch mb-0">
                                    @Html.CheckBoxFor(x => x.CategoryStatus, new { @class = "custom-switch-input" })
                                    <span class="custom-switch-indicator"></span>
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary mt-4">Save</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>