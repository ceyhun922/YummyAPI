@model GetCategoryByIdDto
@{
    Layout = "_AdminLayout";
}

<div class="card-body w-25">
    @using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.CategoryId)
        <div class="form-group">
            <label>Category Name</label>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        </div>

        <div class="form-group mt-3">

            <label class="custom-switch mb-0">
                @Html.CheckBoxFor(x => x.CategoryStatus, new { @class = "custom-switch-input" })
                <span class="custom-switch-indicator"></span>
            </label>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Save</button>
    }
</div>
